{% extends "HelloDiCoreBundle::Main0.html.twig" %}

{% block title %}Remind Passowrd{% endblock title %}

{% block bodywidth %}login{% endblock %}

{% block header %}Reminder{% endblock %}

{% block fos_user_content %}
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
        <div class="login-fields">
            <div class="field" style="opacity: 1; padding: 3px; display: block;" >
                <input type="text" id="username" name="username"  placeholder="Username or Email Address" class="login username-field"
                       value="" required="required" style="width: 100%; margin: 0; padding: 2px 0;"/>
            </div>
        </div>

        {% if invalid_username is defined %}
            <div class="Login_error" >
                <i class="icon-ban-circle" ></i><span>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</span>
            </div>
        {% endif %}

        <div class="login-actions">
            <input class="button btn btn-primary btn-large" type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </form>
{% endblock fos_user_content %}