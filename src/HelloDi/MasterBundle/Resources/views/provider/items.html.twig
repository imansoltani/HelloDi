{% extends 'HelloDiMasterBundle:provider:tab.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('hello_di_master_homepage') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('hello_di_master_provider_index') }}">{{ 'Providers' | trans ({}, "accounts") }}</a>
    <span class="link">{{ 'Items' | trans ({}, "item") }}</span>
{% endblock Site_Map %}

{% block Link_Head %}
    <script type="text/javascript" src="{{ asset('bundles/hellodi/js/libs/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/hellodi/js/libs/DataTable/ColReorder.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/hellodi/js/libs/DataTable/ColVis.js') }}"></script>

    <script type="text/javascript">
        $(document).ready(function() {Fix_Size()});
    </script>
{% endblock %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'Items' | trans ({}, "item") }}</h3>
    </div>

    <br/>
    <a class=" btn btn-primary btn-large" href="{{ path('AddItemProv',{'id':account.id}) }}">{{ 'AddItem' | trans ({}, "item") }}</a>

    <div style="margin-top: 5px" class="tablediv">
        <div class="tab-content datatable">
            <table id="example" class="table postsend">
                <thead>
                <tr>
                    <th>{{ 'Id' | trans ({}, "item") }}</th>
                    <th>{{ 'Name' | trans ({}, "item") }}</th>
                    <th>{{ 'FaceValue' | trans ({}, "item") }} ({{ 'Currency' | trans ({}, "item") }})</th>
                    <th>{{ 'Code' | trans ({}, "code") }}</th>
                    <th>{{ 'ItemType' | trans ({}, "item") }}</th>
                    <th>{{ 'Price' | trans ({}, "price") }} ({{ 'Currency' | trans ({}, "item") }})</th>
                    <th>{{ 'Operation' | trans ({}, "common") }}</th>
                </tr>
                <tr class="input" >
                    <td><input type="text" name="search_Id" value="Search Id" class="search_init" /></td>
                    <td><input type="text" name="search_Name" value="Search Name" class="search_init" /></td>
                    <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                    <td><input type="text" name="search_Code" value="Search Code" class="search_init" /></td>
                    <td><input type="text" name="search_Type" value="Search Type" class="search_init" /></td>
                    <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                    <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                </tr>
                </thead>

                <tbody>
                {% for price in prices %}
                    <tr>
                        <td>{{ price.item.id }}</td>
                        <td>{{ price.item.name }}</td>
                        <td>{{ price.item.faceValue }} {{ price.item.currency }}</td>
                        <td>{{ price.item.code }}</td>
                        <td>
                            {% if     price.item.type == ItemType.DMTU %}
                                {{ 'Mobile' | trans ({}, "item") }}
                            {% elseif price.item.type == ItemType.IMTU %}
                                {{ 'IMTU' | trans ({}, "item") }}
                            {% elseif price.item.type == ItemType.CLCD %}
                                {{ 'Calling_Card' | trans ({}, "item") }}
                            {% elseif price.item.type == ItemType.EPMT %}
                                {{ 'E-payment' | trans ({}, "item") }}
                            {% endif %}
                        </td>
                        <td>{{ price.price }} {{ price.account.currency }}</td>
                        <td class="td-actions" >
                            <a class="btn_actions" href="{{ path('EditItemProv',{'id':account.id,'itemid':price.id}) }}">{{ 'Edit' | trans ({}, "common") }}</a>
                            <br/>
                            {% if price.item.itemType !='imtu' %}
                            <a class="btn_actions" href="{{ path('UploadInputProv',{'id':account.id,'itemid':price.item.id}) }}">{{ 'Upload' | trans ({}, "code") }}</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
{% endblock Tab %}
