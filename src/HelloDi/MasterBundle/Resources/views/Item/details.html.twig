{% extends 'HelloDiMasterBundle:item:tab.html.twig' %}

{% set tab = '1' %}

{% block title %}{{ 'Items' | trans ({}, "item") }}{% endblock title %}

{% block Site_Map %}
    <a class="link" href="{{ path('hello_di_master_homepage') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('hello_di_master_item_index') }}">{{ 'Items' | trans ({}, "item") }}</a>
    <span class="link">{{ 'Details' | trans ({}, "item") }}</span>
{% endblock Site_Map %}

{% set MU = 'item' %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'Details' | trans ({}, "item") }}</h3>
    </div>

    <form class="form-horizontal">
        <div class="control-group" >
            <label class="control-label">{{ 'DateInsert' | trans ({}, "item") }}</label>
            <div class="controls">
                <label><input disabled="" class="input-large" type="text" value="{{ item.dateInsert|date('Y/m/d') }}"></label>
            </div>
        </div>
        <div class="control-group" >
            <label class="control-label">{{ 'Country' | trans ({}, "item") }}</label>
            <div class="controls">
                <label><input disabled="" class="input-large" type="text" value="{{ item.country.name }}" ></label>
            </div>
        </div>
        <div class="control-group" >
            <label class="control-label">{{ 'Name' | trans ({}, "item")}} ({{ 'FaceValue' | trans ({}, "item") }} / {{ 'Currency' | trans ({}, "item") }})</label>
            <div class="controls">
                <label><input disabled="" class="input-large" type="text" value="{{ item.name }} ( {{ item.faceValue }} / {{ item.currency }} )" ></label>
            </div>
        </div>

        <div class="control-group" >
            <label class="control-label">{{ 'ItemType' | trans ({}, "item") }}</label>
            <div class="controls">
                <label><input disabled="" class="input-large" type="text" value="{% if item.type == constant("DMTU",item) %}{{ 'Mobile' | trans ({}, "item") }}{% elseif item.type == constant("IMTU",item) %}{{ 'IMTU' | trans ({}, "item") }}{% elseif item.type == constant("CLCD",item) %}{{ 'Calling_Card' | trans ({}, "item") }}{% else %}{{ 'E-payment' | trans ({}, "item") }}{% endif %}" ></label>
            </div>
        </div>

        <div class="control-group" >
            <label class="control-label">{{ 'MinStock' | trans ({}, "item") }}</label>
            <div class="controls">
                <label><input disabled="" class="input-large" type="text" value="{{ item.alertMinStock }}" ></label>
            </div>
        </div>

        <div class="control-group" >
            <label class="control-label">{{ 'ItemCode' | trans ({}, "item") }}</label>
            <div class="controls">
                <label><input  disabled="" class="input-large" type="text" value="{{ item.code }}" ></label>
            </div>
        </div>

        <div class="control-group" >
            <label class="control-label">{{ 'Operator' | trans ({}, "operator") }}</label>
            <div class="controls">
                <label><input disabled="" class="input-large" type="text" value="{{ item.operator.nameCarrier }}" ></label>
            </div>
        </div>
    </form>

    <div class="form-actions" >
        <a class="btn btn-primary" href="{{ path('hello_di_master_item_edit',{'id':item.id}) }}">{{ 'Edit' | trans ({}, "common") }}</a>
    </div>
{% endblock %}



