{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowEntityMaster.html.twig' %}

{% set tab = '3' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('Ent_Main') }}">Entities</a>
    <span class="link">Address</span>
{% endblock Site_Map %}
{% block Tab %}




<div class="tablediv">
    <div class="contenttitle">
        <h4>Address</h4>
    </div>
    <div class="tab-content">
        <table style="margin-top: 20px" class="table table-striped table-bordered postsend">
            <thead>
            <tr>
                <th>{{ 'Town' | trans ({}, "user") }}</th>
                <th>{{ 'Street' | trans ({}, "user") }}</th>
                <th>{{ 'Aditional' | trans ({}, "user") }}</th>
                <th>{{ 'PostCode' | trans ({}, "user") }}</th>
                <th>{{ 'City' | trans ({}, "user") }}</th>
                <th>{{ 'Country' | trans ({}, "user") }}</th>
                <th>{{ 'Manage' | trans ({}, "user") }}</th>
            </tr>
            </thead>
            <tbody>


            <tr>
                <td>{{ entity.entadrs1 }}</td>
                <td>{{ entity.entadrs2 }}</td>
                <td>{{ entity.entadrs3 }}</td>
                <td>{{ entity.entNp }}</td>
                <td>{{ entity.entCity }}</td>
                <td>{{ entity.Country.Iso }}|{{ entity.Country.name}}</td>
                <td>
                    <a class="btn_actions" href="{{ path('Ent_Edit_Address',{'id':entity.id,'addrid':entity.id}) }}">Manage</a>
                </td>
            </tr>


            </tbody>
        </table>
</div>
    </div>


<hr>

    <div class="tablediv" >
        <div class="contenttitle">
            <h4>Adresses</h4>
        </div>
        <div class="tab-content">
            <table style="margin-top: 20px" class="table table-striped table-bordered postsend">
                <thead>
                <tr>
                    <th>{{ 'Id' | trans ({}, "user") }}</th>
                    <th>{{ 'DateChange' | trans ({}, "user") }}</th>
                    <th>{{ 'Town' | trans ({}, "user") }}</th>
                    <th>{{ 'Street' | trans ({}, "user") }}</th>
                    <th>{{ 'Additional' | trans ({}, "user") }}</th>
                    <th>{{ 'PostCode' | trans ({}, "user") }}</th>
                    <th>{{ 'City' | trans ({}, "user") }}</th>
                    <th>{{ 'Country' | trans ({}, "user") }}</th>
                </tr>
                </thead>
                <tbody>

                {% for Address in pagination %}

                        <tr>

                            <td >{{ Address.id }}</td>
                            <td>{{ Address.adrsDate|date('m-Y-d') }}</td>
                            <td>{{ Address.adrs1 }}</td>
                            <td>{{ Address.adrs2 }}</td>
                            <td>{{ Address.adrs3 }}</td>
                            <td>{{ Address.adrsNp }}</td>
                            <td>{{ Address.adrsCity }}</td>
                            <td>{{ Address.Country.Iso }}|{{ Address.Country.name}}</td>
                        </tr>

                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}