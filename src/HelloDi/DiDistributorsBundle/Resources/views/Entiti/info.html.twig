{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowEntityMaster.html.twig' %}

{% set tab = '4' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('Ent_Main') }}">{{ 'Entities' | trans ({}, "entity") }}</a>
    <span class="link">{{ 'Info' | trans ({}, "common") }}</span>
{% endblock Site_Map %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'Info' | trans ({}, "entity") }}</h3>
    </div> <!-- /widget-header -->

    <form style="margin-top: 20px" action="{{ path('Ent_Info',{'id':entity.id}) }}" method="post" class="form-horizontal" >
        <fieldset>


            <div class="control-group">
                <label class="control-label" >{{ 'Name' | trans ({}, "entity") }}</label>
                <div class="controls">
                    <input type="text" disabled class="input-large" value="{{ entity.entName }}" >
                </div>
            </div>

            <div class="control-group">
                <label class="control-label" >{{ 'VatNumber' | trans ({}, "entity") }}</label>
                <div class="controls">
                    <input type="text" disabled class="input-large" value="{{ entity.entVatNumber }}" >
                </div>
            </div>



            <div class="control-group">
            {{ form_label(edit_form.entTel1) }}
            {{ form_widget(edit_form.entTel1) }}
           </div>

            <div class="control-group">
            {{ form_label(edit_form.entTel2) }}
            {{ form_widget(edit_form.entTel2) }}
            </div>



            <div class="control-group">
            {{ form_label(edit_form.entFax) }}
            {{ form_widget(edit_form.entFax) }}
            </div>

            <div class="control-group">
            {{ form_label(edit_form.entWebsite) }}
            {{ form_widget(edit_form.entWebsite) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.Country) }}
                <div class="controls">
                    {{ form_widget(edit_form.Country) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entCity) }}
                {{ form_widget(edit_form.entCity) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entAdrs1) }}
                {{ form_widget(edit_form.entAdrs1) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entAdrs2) }}
                {{ form_widget(edit_form.entAdrs2) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entAdrs3) }}
                {{ form_widget(edit_form.entAdrs3) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entNp) }}
                {{ form_widget(edit_form.entNp,{ 'attr' : {'onkeydown' :
                'return ( event.ctrlKey || event.altKey
                || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
                || (95<event.keyCode && event.keyCode<106)
                || (event.keyCode==8) || (event.keyCode==9)
                || (event.keyCode>34 && event.keyCode<40)
                || (event.keyCode==46) )'
                } }) }}
            </div>

            {{ form_widget(edit_form._token) }}


            <div class="form-actions" style="margin-bottom: 0" >
                <button class="btn btn-primary" type="submit">{{'Save' | trans ({}, "common")}}</button>

            </div>
        </fieldset>
    </form>


{% endblock %}