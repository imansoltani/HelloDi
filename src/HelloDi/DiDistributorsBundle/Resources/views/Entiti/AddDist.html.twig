{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowEntityMaster.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('Ent_Main') }}">Entities</a>
    <span class="link">Accounts</span>
{% endblock Site_Map %}

{% block Tab %}
<div class="widget-header">
    <h3>Add Distributor Accounts</h3>
</div> <!-- /widget-header --><br>

<form class="form-horizontal" action="{{ path('AddDist',{'id':id}) }}" method="post" >

    <div class="control-group">
        {{ form_label(form.accName) }}
        {{ form_widget(form.accName) }}
        {{ form_errors(form.accName) }}
    </div>

    <div class="control-group">
        {{ form_label(form.accCurrency) }}
        <div class="controls" >
            {{ form_widget(form.accCurrency) }}
        </div>
        {{ form_errors(form.accCurrency) }}
    </div>

    <div class="control-group">
        {{ form_label(form.accTerms) }}
        {{ form_widget(form.accTerms) }}
        {{ form_errors(form.accTerms) }}
    </div>

    <div class="control-group">
        {{ form_label(form.accTimeZone) }}
        <div class="controls" >
            {{ form_widget(form.accTimeZone) }}
        </div>
        {{ form_errors(form.accTimeZone) }}
    </div>

    <div class="control-group">
        {{ form_label(form.accDefaultLanguage) }}
        <div class="controls" >
            {{ form_widget(form.accDefaultLanguage) }}
        </div>
        {{ form_errors(form.accDefaultLanguage) }}
    </div>

    {{ form_widget(form._token) }}



    <input type="hidden" name='id' value="{{ id }}">
    <div class="form-actions" style="margin-bottom: 0" >
        <input class="btn btn-primary" type="submit"  value="Create">

    </div>
</form>
{% endblock %}
