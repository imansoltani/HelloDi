{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowEntityMaster.html.twig' %}

{% set tab = '5' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('Ent_Main') }}">Entities</a>
    <span class="link">Address</span>
{% endblock Site_Map %}
{% block Tab %}
    <div class="widget-header">
        <h3>Entity Address</h3>
    </div> <!-- /widget-header --><br>

    {% if entity.parent is null %}
        <a style="margin-bottom: 5px" class=" btn btn-primary btn-large" href="#">
   Add Address
        </a>
    {% endif %}

    <div class="tablediv">
        <div class="contenttitle">
            <h4>Address</h4>
        </div>
        <div class="tab-content">
            <table style="margin-top: 20px" class="table table-striped table-bordered postsend">
                <thead>
                <tr>
                    <th>{{'Address.Id' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Manage' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Type' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Start' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Np' | trans ({}, "entity")}}</th>
                    <th>{{'Address.City' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Country' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Address1' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Address2' | trans ({}, "entity")}}</th>
                    <th>{{'Address.Address3' | trans ({}, "entity")}}</th>
                </tr>
                </thead>
                <tbody>
                {% for address in addresses %}
                    <tr>
                        <td style="font-weight: bold">{{ address.id }}</td>
                        <td class="td-actions">
                            <a href="#" class="btn_actions">
                               Edit
                            </a>
                        </td>
                        <td>{{ address.adrsType }}</td>
                        <td>{{ address.adrsStart|date('Y/m/d') }}</td>
                        <td>{{ address.adrsNp }}</td>
                        <td>{{ address.adrsCity }}</td>
                        <td>{{ address.Country.iso }}</td>
                        <td>{{ address.adrs1 }}</td>
                        <td>{{ address.adrs2 }}</td>
                        <td>{{ address.adrs3 }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
