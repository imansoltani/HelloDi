{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowEntityMaster.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('Ent_Main') }}">Entities</a>
    <a class="link" >Users</a>
    <span class="link">Create a new user</span>
{% endblock Site_Map %}


{% block Tab %}


    <div class="widget-header">
        <h3>Add Users</h3>
    </div>

        <!-- /widget-header --><br>

<form class="form-horizontal" action="{{ path('AddNewUserEntiti',{'id':entity.id}) }}" method="post" >

    <div class="control-group">
        {{ form_label(form.firstname) }}
        <div class="controls money">
            {{ form_widget(form.firstname ) }} <span class="icon-certificate">
            </span>
        </div>
    </div>

    <div class="control-group">
    {{ form_label(form.lastname) }}
        <div class="controls money">
            {{ form_widget(form.lastname ) }}
            </span>
        </div>
    </div>
    <div class="control-group">
    {{ form_label(form.username) }}
        <div class="controls money">
            {{ form_widget(form.username ) }} <span class="icon-certificate">
            </span>
        </div>
    </div>

    <div class="control-group">
    {{ form_label(form.mobile) }}
    {{ form_widget(form.mobile) }}
    </div>

    <div class="control-group">
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
    </div>

    <div class="control-group">
        {{ form_label(form.plainPassword.first) }}
        <div class="controls money">
            {{ form_widget(form.plainPassword.first ) }} <span class="icon-certificate">
            </span>
        </div>
        {#{{ form_widget(form.plainPassword) }}#}
    </div>

    <div class="control-group">
        {{ form_label(form.plainPassword.second) }}
        <div class="controls money">
            {{ form_widget(form.plainPassword.second ) }} <span class="icon-certificate">
            </span>
        </div>
        {#{{ form_widget(form.plainPassword) }}#}
    </div>


    <div class="control-group">
    {{ form_label(form.Account) }}
    <div class="controls money">

            <div class="controls">
                {{ form_widget(form.Account ) }}
            </div> <span class="icon-certificate">
            </span>

    </div>
     </div>

    <div class="control-group">
        {{ form_label(form.language) }}
        <div class="controls">
            {{ form_widget(form.language) }}
        </div>
    </div>

    <div class="control-group">
        {{ form_label(form.roles[0]) }}
        <div class="controls">
            {{ form_widget(form.roles[0]) }}<span class="icon-certificate">
        </div>
    </div>
    <div class="control-group">
        {{ form_label(form.enabled) }}
        <div class="controls">
            {{ form_widget(form.enabled) }}
        </div>
    </div>

    {{ form_widget(form._token) }}
    <input type="hidden" value="{{ entity.id }}">


    <div class="form-actions" style="margin-bottom: 0" >
        <input type="submit" class="btn btn-primary btn-medium" value="Add">
        <input type="reset" class="btn btn-medium" value="Reset">
    </div>

</form>
{% endblock %}