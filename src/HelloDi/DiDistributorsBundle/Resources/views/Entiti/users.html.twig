{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowEntityMaster.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('Ent_Main') }}">Provider</a>
    <a class="link" href="#">{{ entity.entName }}</a>
    <span class="link">Accounts</span>
{% endblock Site_Map %}

{% block Tab %}
    <a class="button btn btn-warning btn-large" href="{{ path('AddNewUserEntiti',{id:entity.id}) }}">
        {{ 'User.Add' | trans ({}, "user") }}
    </a>

    <div class="tab-content">
        <table style="margin-top: 20px" class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>{{ 'User.Id' | trans ({}, "user") }}</th>
                <th>{{ 'User.Name' | trans ({}, "user") }}</th>
                <th>{{ 'User.UserName' | trans ({}, "user") }}</th>
                <th>{{ 'User.Account' | trans ({}, "user") }}</th>
                <th>{{ 'User.Privilege' | trans ({}, "user") }}</th>
                <th>{{ 'User.Modify' | trans ({}, "user") }}</th>
            </tr>
            </thead>
            <tbody>

            {% for user in pagination %}
                    <tr>
                        <td style="font-weight: bold">{{ user.id }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.username }}</td>
                        <td>
                            {% if user.Account.accName!=null %}
                                {{ user.Account.accName }}
                            {% else %}
                                Null
                            {% endif %}
                        </td>
                        <td>
                            {#{% if user.roles==0 %}#}
                                {#Seller#}
                            {#{% elseif user.roles==1 %}#}
                                {#<span style="color: red">Admin</span>#}

                            {#{% endif %}#}
                        </td>
                        <td>
                            <a href="#">Modify</a>
                        </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
        {#{button pagination}#}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}