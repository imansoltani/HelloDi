{% extends 'HelloDiDiDistributorsBundle:Step:RetailDistAdd.html.twig' %}

{% block steps %}
    <div style="display: block;position: absolute;z-index: 10" class="content important1" id="step-1">
        <div class="widget-header">
            <h3>Create Entity</h3>
        </div>

        <div class="control-group important">

            {{ form_label(form_Relaited_New.entName,'Name(Company):') }}
            <div class="controls money">
                {{ form_widget(form_Relaited_New.entName) }}
                <span class="icon-certificate"></span>
                {{ form_errors(form_Relaited_New.entName) }}
              </div>
        </div>

        <div class="control-group">
            {{ form_label(form_Relaited_New.entVatNumber) }}
            {{ form_widget(form_Relaited_New.entVatNumber,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}
            {{ form_errors(form_Relaited_New.entVatNumber) }}
        </div>
        <hr>
        <div class="widget-header">
            <h3>Address</h3>
        </div>
        <div class="control-group important">

            {{ form_label(form_Relaited_New.Country,'Country:') }}
            <div class="controls money">
                {{ form_widget(form_Relaited_New.Country) }}
                <span class="icon-certificate"></span>
            </div>
            {{ form_errors(form_Relaited_New.Country) }}
        </div>

        <div class="control-group important">
            {{ form_label(form_Relaited_New.entCity,'City:') }}
            <div class="controls money">
            {{ form_widget(form_Relaited_New.entCity) }}
            <span class="icon-certificate"></span>
                </div>
            {{ form_errors(form_Relaited_New.entCity) }}
        </div>


        <div class="control-group important">
            <label class="control-label">
                Town:
            </label>
            <div class="controls money">
            {{ form_widget(form_Relaited_New.entAdrs1) }}
                <span class="icon-certificate"></span>
                </div>
            {{ form_errors(form_Relaited_New.entAdrs1) }}
        </div>


        <div class="control-group">
            <label class="control-label">
                Street:
            </label>
            {{ form_widget(form_Relaited_New.entAdrs2) }}
            {{ form_errors(form_Relaited_New.entAdrs2) }}
        </div>

        <div class="control-group">
            <label class="control-label">
                Additional:
            </label>
            {{ form_widget(form_Relaited_New.entAdrs3) }}
            {{ form_errors(form_Relaited_New.entAdrs3) }}
        </div>


        <div class="control-group important">
            <label class="control-label">
                Post Code:
            </label>
            <div class="controls money">
            {{ form_widget(form_Relaited_New.entNP,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}
            <span class="icon-certificate"></span>
            </div>
            {{ form_errors(form_Relaited_New.entNP) }}
        </div>



        <hr>
        <div class="widget-header">
            <h3>Additional Details</h3>
        </div>
        <div class="control-group entTel1">
            {{ form_label(form_Relaited_New.entTel1,'Tel1:') }}
            {{ form_widget(form_Relaited_New.entTel1) }}
            {{ form_errors(form_Relaited_New.entTel1) }}
        </div>
        <div class="control-group entTel2">
            {{ form_label(form_Relaited_New.entTel2,'Tel2:') }}
            {{ form_widget(form_Relaited_New.entTel2) }}
            {{ form_errors(form_Relaited_New.entTel2) }}
        </div>
        <div class="control-group entFax">
            {{ form_label(form_Relaited_New.entFax,'Fax:') }}
            {{ form_widget(form_Relaited_New.entFax) }}
            {{ form_errors(form_Relaited_New.entFax) }}
        </div>
        <div class="control-group entWebsite">
            {{ form_label(form_Relaited_New.entWebsite,'WebSite:') }}
            {{ form_widget(form_Relaited_New.entWebsite) }}
            {{ form_errors(form_Relaited_New.entWebsite) }}
        </div>

    </div>

    <div style="display: none;position: absolute;z-index: 11" class="content" id="step-2">
        <div class="widget-header">
            <h3>Create Account</h3>
        </div>
        <div class="control-group accName">
            {{ form_label(form_Relaited_New.accounts[0].accName,'Account:') }}
            <div class="controls money">

            {{ form_widget(form_Relaited_New.accounts[0].accName) }}
                <span class="icon-certificate"></span>
                </div>
            {{ form_errors(form_Relaited_New.accounts[0].accName) }}
        </div>

        <div class="control-group accTerms">
            {{ form_label(form_Relaited_New.accounts[0].accTerms,'Terms:') }}
