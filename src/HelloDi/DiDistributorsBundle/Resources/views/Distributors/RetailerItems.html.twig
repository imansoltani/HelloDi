{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowRetailDist.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('retailer_show') }}">Retailer</a>
    <a class="link" href="#">Manage</a>
    <span class="link">Items</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="widget-header">
        <h3>Items</h3>
    </div> <!-- /widget-header -->
    <br>
    <a class="button btn btn-primary btn-large" href="{{ path('') }}" >Add New Item</a>
    <div style="margin-top: 5px" class="tablediv">
        <form method="post">
            <div class="tab-content datatable">
                <table id="example" class="table postsend">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>name</th>
                        <th>faceValue</th>
                        <th>type</th>
                        <th>Price(Currency)</th>
                        <th>Manage</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>{{ item.itemName }}</td>
                            <td>{{ item.itemFaceValue }}</td>
                            <td>{% if item.itemType==0 %}Mobile{% elseif item.itemType==1 %}Internet{% else %}Tel{% endif %}</td>
                            <td>{{ item.prices[0].price }}
                                {{ item.prices[0].priceCurrency }}</td>
                            <td>
                                <a class="btn_actions" href="{{ path('items_item_per_retailers',{'id':item.id}) }}">See Price for retailers</a>
                                <br/>
                                <a class="btn_actions" href="#">details</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </form>
    </div>
    <script type="text/javascript" src="{{ asset('bundles/hellodi/js/libs/jquery-1.9.1.min.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/hellodi/js/libs/jquery.dataTables.nightly.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            Fix_Size();
        } );

    </script>

{% endblock %}