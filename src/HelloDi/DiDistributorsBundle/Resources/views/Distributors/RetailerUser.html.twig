                <thead>
                <tr>
                    <th>{{ 'User.Id' | trans ({}, "user") }}</th>
                    <th>{{ 'User.Name' | trans ({}, "user") }}</th>
                    <th>{{ 'User.UserName' | trans ({}, "user") }}</th>
                    <th>{{ 'User.Role' | trans ({}, "user") }}</th>
