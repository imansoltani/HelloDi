
<div class="tablediv" >
    <div class="contenttitle">
        <h4>Accounts</h4>
    </div>
    <div class="tab-content">
        <a  href="{{ path('StaffAdd',{'id':Account.id}) }}">Add New user</a>
        <table style="margin-top: 20px" class="table table-striped table-bordered postsend">
            <thead>
            <tr>
                <th>{{'Account.Id' | trans ({}, "account")}}</th>
                <th>{{'Account.Name' | trans ({}, "account")}}</th>
                <th>{{'Account.Username' | trans ({}, "account")}}</th
                <th>{{'Account.Status' | trans ({}, "account")}}</th>
                <th>{{'Account.Role' | trans ({}, "account")}}</th>
                <th>{{'Account.Manage' | trans ({}, "account")}}</th>
                <th>{{'Change Role' | trans ({}, "account")}}</th>
            </tr>

            </thead>
            <tbody>
            {% for user in pagination %}
                <tr>
                    <td >{{ user.id }}</td>

                    <td >{{ user.firstname }}</td>
                    <td >{{ user.username }}</td>
                    <td >
                        {% if user.status==0 %}
                            InActive
                        {% else %}
                            Active
                        {% endif %}
                    </td>
                    <td>{{ user.roles[0] }}</td>

                    <td class="td-actions">


                        <a href="{{ path('StaffEdit',{'id':user.id }) }}">Modify</a>

                    </td>
                    <td class="td-actions">


                        <a href="{{ path('ChangeRole',{'id': user.id }) }}">Change Role</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {#{button pagination}#}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>