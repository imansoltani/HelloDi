{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowRetailDist.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('retailer_show') }}">Retailer</a>
    <a class="link" href="#">Manage</a>
    <span class="link">Transactions</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="widget-header">
        <h3>Transactions</h3>
    </div> <!-- /widget-header -->
    <br>

    <a class="btn btn-primary btn-large" href="{{ path('DistRetailerFunding',{'id':retailerAccount.id}) }}">Fund Retailers</a>

    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search">Search Transactions</p>
                        </span>
        </h5>
        <form class="form-horizontal SearchForm" action="{{ path('Retailer_Transaction',{'id':retailerAccount.id}) }}"
              method="POST">
            <fieldset>
                <div class="control-group">
                    {{ form_label(form.TypeDate[0]) }}
                    <div class="controls">
                        {{ form_widget(form.TypeDate[0],{ 'attr': {'checked':'checked'}}) }}
                    </div>
                </div>


                <div class="control-group">
                    {{ form_label(form.TypeDate[1]) }}
                    <div class="controls">
                        {{ form_widget(form.TypeDate[1]) }}
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.Type) }}
                    <div class="controls">
                        {{ form_widget(form.Type) }}
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.DateStart) }}
                    <div class="controls">
                        {{ form_widget(form.DateStart) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_label(form.DateEnd) }}
                    <div class="controls">
                        {{ form_widget(form.DateEnd) }}
                    </div>
                </div>

                <hr>
                <input class="btn btn-primary" type="submit" value="Search">

            </fieldset>
        </form>
        <script type="text/javascript">
            $(function () {
                $(".SearchForm").hide();
                $('.TitleShow1').click(function () {
                    $('.SearchForm').slideToggle();
                    $('#search_logo').removeAttr('class');

                    if ($('.title_search').html() == 'Search Transactions') {
                        $('.title_search').html('Close Search');
                        $('#search_logo').attr('class', 'icon-remove');
                    }
                    else {
                        $('.title_search').html('Search Transactions');
                        $('#search_logo').attr('class', 'icon-search');
                    }

                    var x = $('.form_search').offset().top - 20;
                    $('body,html').animate({
                        scrollTop: x
                    }, 800);
                });

            });
        </script>
    </div>


    <div class="tablediv">
        <div class="contenttitle">
            <h4>Transactions</h4>
        </div>
        <form>
            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>
                        <th>{{ 'Transaction.Date' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Description' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Credit' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Debit' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Balance' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Manage' | trans ({}, "account") }}</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for tran in pagination %}
                        <tr>
                            <td>{{ tran.tranDate|date('y-M-d') }}</td>

                            <td>{{ tran.tranDescription }}</td>

                            {% if tran.tranAmount>=0 %}
                                <td>{{ tran.tranAmount }}</td>
                                <td>------</td>
                           {% else %}
                                 <td>------</td>
                                 <td>{{ -tran.tranAmount }}</td>
                            {% endif %}

                            <td>{{ tran.Account.accBalance }}</td>
                            <td class="td-actions">


                                <a class="btn_actions"
                                   href="{{ path('Retailer_DetailsTransaction',{'id':tran.id }) }}">Details</a>

                            </td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                {#{button pagination}#}
            </div>
        </form>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}