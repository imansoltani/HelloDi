{% block title %}
    {{ 'Validate'|trans({},'ogone') }}
{% endblock title %}

{% block bodywidth %}login{% endblock %}

{% block header %}Validate{% endblock %}

{% block MoreMenu %}
    <ul class="nav pull-right">



        <li class="dropdown">

            <a style="font-size: 16px" href="
                    {% if is_granted("ROLE_DISTRIBUTOR_ADMIN") %}
                    {{ path('distributors_dashboard') }}
