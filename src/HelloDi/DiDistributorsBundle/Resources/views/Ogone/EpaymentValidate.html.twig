                    {{ path('retailers_dashboard') }}
                    {% endif %}
                " id="user_info" class="dropdown-toggle">


                <span >Dashboard</span>
            </a>



        </li>


    </ul>
{% endblock %}

{% block fos_user_content %}





        <div class="login-fields">

            <div class="Login_error Comment"  >
                {{ 'are_you_sure_to_payment_%value%_%currency%'|trans({'value':ogonePayment.paymentAmount,'currency':ogonePayment.paymentCurrencyISO},'ogone') }}


            </div>


            <!-- /field -->


        </div>

        <div class="login-actions">

				<span class="login-checkbox">

				</span>
