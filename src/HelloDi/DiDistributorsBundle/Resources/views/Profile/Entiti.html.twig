{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProfileMaster.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <span class="link">{{ 'EntityInfo' | trans ({}, "entity") }}</span>
{% endblock Site_Map %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'EntityInfo' | trans ({}, "entity") }}</h3>
    </div> <!-- /widget-header -->

    <form style="margin-top: 20px" action="{{ path('MasterProfileEntiti') }}" method="post" class="form-horizontal" >
        <fieldset>


            <div class="control-group">
                {{ form_label(edit_form.entName) }}
                {{ form_widget(edit_form.entName) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entVatNumber) }}
                {{ form_widget(edit_form.entVatNumber) }}
            </div>



            <div class="control-group">
                {{ form_label(edit_form.entTel1) }}
                {{ form_widget(edit_form.entTel1) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entTel2) }}
                {{ form_widget(edit_form.entTel2) }}
            </div>



            <div class="control-group">
                {{ form_label(edit_form.entFax) }}
                {{ form_widget(edit_form.entFax) }}
            </div>

            <div class="control-group">
                {{ form_label(edit_form.entWebsite) }}
                {{ form_widget(edit_form.entWebsite) }}
            </div>


            {{ form_widget(edit_form._token) }}


            <div class="form-actions" style="margin-bottom: 0" >
                <button class="btn btn-primary" type="submit">{{'Save' | trans ({}, "common")}}</button>

            </div>
        </fieldset>
    </form>


{% endblock %}