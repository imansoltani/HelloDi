{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowRetailerMaster.html.twig' %}

{% set tab2 = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">{{ 'Distributor' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('ManageDistChildren',{'id':Account.id}) }}">{{ 'Retailers' | trans ({}, "accounts") }}</a>
    <a class="link" href="javascript:history.go(-1)">{{ 'Transactions' | trans ({}, "transaction") }}</a>
    <span class="link">{{ 'FundRetailers' | trans ({}, "accounts") }}</span>
{% endblock Site_Map %}
{% block Tab %}
    <div class="row">
        <div class="span5">
            <div class="widget-header">
                <h3>
                    {{ 'FundRetailerBalance' | trans ({}, "accounts") }}

                </h3>
            </div> <!-- /widget-header -->
            <br>

            {{ 'RetailerBalance' | trans ({}, "accounts") }}  : <b>{{ retailerAccount.accBalance }}</b>
<hr>
            <form style="margin-top: 20px" action="{{ path('Master_RetailerTransferFunding',{'id':retailerAccount.id}) }}" method="post" class="form-horizontal YesNoMessage" header='Change balance!' message='Are you sure to change balance? ' >

                <fieldset>

                    <div class="control-group">

                        {{ form_label(formapplay.Amount) }}


                        <div class="controls money">
                            {{ form_widget(formapplay.Amount,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} })  }} | {{ Account.accCurrency }} <span class="icon-certificate"></span>
                        </div>


                    </div>


                    <div class="control-group ">
                        {{ form_label(formapplay.Communications ) }}
                        <div class="controls money">
                            {{ form_widget(formapplay.Communications )  }}
                            <span class="icon-certificate"></span>
                        </div>
                    </div>

                    <div class="control-group ">
                        {{ form_label(formapplay.Description ) }}
                        <div class="controls money">
                            {{ form_widget(formapplay.Description )  }}
                            <span class="icon-certificate"></span>
                        </div>
                    </div>


                    <div class="form-actions" style="margin-bottom: 0" >
                        <button class="btn btn-primary" type="submit">{{ 'Transfer' | trans ({}, "common") }}</button>
                        <a href="javascript:history.go(-1)" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>
                    </div>


                </fieldset>

            </form>
        </div>
        <div class="span5 LeftSpan">
            {#//----Form update----//#}

            {% if is_granted('ROLE_MASTER_ADMIN') %}
            <div class="widget-header">
                <h3>
                    {{ ' UpdateRetailerCreditLimit' | trans ({}, "accounts") }}

                </h3>
            </div> <!-- /widget-header --><br>
                {{ ' RetailerCreditLimit' | trans ({}, "accounts") }}
             : <b>{{ retailerAccount.accCreditlimit }}</b>
            <hr>


            <form style="margin-top: 20px" action="{{ path('Master_RetailerUpdateFunding',{'id':retailerAccount.id}) }}" method="post" class="form-horizontal YesNoMessage" header='Change credit limit!' message='Are you sure to change credit limit? ' >

                <fieldset>

                    <div class="control-group">

                        {{ form_label(formupdate.Amount) }}

                        <div class="controls money">
                            {{ form_widget(formupdate.Amount,
                            { 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }
                            )
                            }} | {{ retailerAccount.Parent.accCurrency }} <span class="icon-certificate"></span>
                        </div>


                    </div>

                    <div class="control-group">
                        {{ form_label(formupdate.As) }}
                        <div class="controls money">
                            {{ form_widget(formupdate.As)  }}
                            <span class="icon-certificate"></span>
                        </div>
                    </div>

                    <div class="form-actions" style="margin-bottom: 0" >
                        <button class="btn btn-primary" type="submit"> {{ ' Update' | trans ({}, "common") }}</button>
                        <a href="javascript:history.go(-1)" class="btn"> {{ ' Cancel' | trans ({}, "common") }}</a>
                    </div>


                </fieldset>

            </form>
 {% endif %}
        </div>
    </div>
{% endblock %}