{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowRetailerMaster.html.twig' %}
{% set tab2 = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">{{ 'Distributor' | trans ({}, "accounts")}}</a>
    <a class="link" href="{{ path('ManageDistChildren',{'id':Account.id}) }}">{{ 'Retailer' | trans ({}, "accounts")}}</a>
    <a class="link" href="{{ path('Master_RetailerItem',{'distid':Account.id,'id':retailerAccount.id}) }}">{{ 'Items' | trans ({}, "item") }}</a>
    <span class="link">{{ 'AddItem' | trans ({}, "item") }}</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'AddItem' | trans ({}, "item") }}</h3>
    </div> <!-- /widget-header -->

    <form id="addprice" action="{{ path('Master_RetailerItemAdd',{'distid':Account.id,'id':retailerAccount.id}) }}" method="post" class="form-horizontal">

        <div class="control-group">
            {{ form_label(form.Item) }}
            <div class="controls money">
                <div class="controls">
                    {{ form_widget(form.Item,{'id': 'item'}) }}
                </div>
                <span class="icon-certificate"></span>
            </div>
            {{ form_errors(form.Item) }}
        </div>

        <div class="control-group">
            {{ form_label(form.price) }}
            <div class="controls money" >{{ form_widget(form.price) }} | {{ retailerAccount.accCurrency }}
            <span class="icon-certificate"></span>
            </div>
            {{ form_errors(form.price) }}
        </div>

        <div class="control-group price">
            {{ form_label(form.denomination) }}
            <div class="controls money" >
                {{ form_widget(form.denomination,{ 'id': 'denomination', 'attr' : {
                'onfocus' : 'if($(this).val()=="")CheckItemCurrEqAccCurr()',
                'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}
                <img src="{{ asset('bundles/hellodi/img/refresh/loading.gif') }}" id="refresh1" style="display: none">
            </div>
            {{ form_errors(form.denomination) }}
        </div>

        {{form_widget(form._token)}}

        <input type="hidden" name="accountid" value="{{  retailerAccount.id }}" />

        <div class="form-actions" style="margin-bottom: 0" >
            <input type="submit" class="btn btn-primary" value="{{ 'Add' | trans ({}, "common") }}" />
            <a class="btn" href="{{ path('Master_RetailerItem',{'distid':Account.id,'id':retailerAccount.id}) }}" >{{ 'Cancel' | trans ({}, "common") }}</a>
        </div>

    </form>

    <script type="text/javascript">
        function CheckItemCurrEqAccCurr()
        {
            if($('#item').val()!=null)
            {
                var item_id = $('#item').val();
                var account_id = {{ retailerAccount.id }};
                $('#refresh1').show();
                $.post('{{ path('CheckItemCurrEqAccCurr') }}',{accountid:account_id, itemid:item_id},function(result){
                    $("#denomination").val(result);
                    $('#refresh1').hide();
                });
            }
        }
    </script>
{% endblock %}