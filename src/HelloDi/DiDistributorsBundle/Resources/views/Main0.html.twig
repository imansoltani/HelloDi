<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>
        {% block title %}

        {% endblock %}
    </title>

    <link rel="shortcut icon" href="{{ asset('bundles/hellodi/img/favicon.ico.png') }}">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">


    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600">
    <link href='http://fonts.googleapis.com/css?family=Quando|Carrois+Gothic+SC|Josefin+Slab|Quicksand|Didact+Gothic|Karla|Marcellus+SC|Oxygen|Julius+Sans+One|Viga' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Noto+Sans|Marcellus+SC|Cinzel|Holtwood+One+SC|Days+One|Archivo+Black|Quicksand|Julius+Sans+One|Varela+Round|Anton|Paytone+One|Oswald|Nunito' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Average+Sans' rel='stylesheet' type='text/css'>



    <link href="{{ asset('bundles/hellodi/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/hellodi/css/Main.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/hellodi/css/login.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/hellodi/css/Responcive.css') }}" rel="stylesheet">

    <link href="{{ asset('bundles/hellodi/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/hellodi/css/ui-lightness/jquery-ui-1.10.0.custom.min.css') }}" rel="stylesheet">



</head>

<body>


<div class="BG" >

</div>

<div class="navbar navbar-inverse navbar-fixed-top" >
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" id="brand" href="{{ path('hellodi_homepage') }}">
                <img src="{{ asset('bundles/hellodi/img/logo-mini.png') }}" width="30px"/> Hello <span>Di</span>
            </a>

            <ul class="nav pull-right">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}


                    <li class="dropdown">

                        <a style="font-size: 16px" href="#" id="user_info" class="dropdown-toggle" data-toggle="dropdown">


							<span >{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                <b class="caret"></b></span>
                        </a>

                        <ul style="font-size: 16px" class="dropdown-menu">
                            {% if is_granted("ROLE_MASTER") %}
                                <li><a href="{{ path('loginsuccess') }}">Dashboard</a></li>
                            {% endif %}
                            {% if is_granted("ROLE_DISTRIBUTOR") %}
                                <li><a href="{{ path('distributors_dashboard') }}">Dashboard</a></li>
                            {% endif %}
                            {% if is_granted("ROLE_RETAILER") %}
                                <li><a href="{{ path('retailers_dashboard') }}">Dashboard</a></li>
                            {% endif %}
                            <li><a href="{{ path('fos_user_profile_edit') }}">Setting</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                        </ul>

                    </li>

                {% else %}


                    <li class="dropdown">
                        <a style="font-size: 16px" href="{{ path('fos_user_security_login') }}" id="user_info" class="dropdown-toggle">
                                <span id="user_title_menu" style="display: block" >
                                   {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
                                 </span>
                        </a>
                    </li>


                {% endif %}

                {% block MoreMenu %}
                {% endblock %}
            </ul>

        </div>
    </div>
</div>



<div class="account-container stacked">



    <div class="body_main {% block bodywidth %}{% endblock %} "  >

        <h1>
            {% block header %}{% endblock %}
        </h1>

        <div class="content clearfix">


            {% block fos_user_content %}

            {% endblock %}

        </div> <!-- /content -->
    </div>



</div> <!-- /account-container -->





<!-- Le javascript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('bundles/hellodi/js/libs/jquery-1.8.3.min.js') }}"></script>
<script src="{{ asset('bundles/hellodi/js/libs/jquery-ui-1.10.0.custom.min.js') }}"></script>
<script src="{{ asset('bundles/hellodi/js/libs/bootstrap.min.js') }}"></script>

<script src="{{ asset('bundles/hellodi/js/Application.js') }}"></script>

<script src="{{ asset('bundles/hellodi/js/demo/signin.js') }}"></script>



</body>
</html>

