{% extends 'HelloDiDiDistributorsBundle:Menu:AdminRetailer.html.twig' %}

{% block title %}
    {{ 'Stuff' | trans ({}, "user") }}
{% endblock title %}

{% set MU = 'setting' %}

{% block Site_Map %}
    <a class="link" href="{{ path('retailers_dashboard') }}">{{ 'Home' | trans ({}, "menu") }} </a>
    <span class="link">{{ 'Stuff' | trans ({}, "user") }} </span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-th-large"></i>
    {{ 'Stuff' | trans ({}, "user") }}
{% endblock %}


{% block Link_Footer %}

{% endblock %}

{% block Body %}

    <div class="span">
        <div class="widget-content">

            <a class="btn-large button btn btn-primary " href="{{ path('RetailerStaffAdd') }}">
                {{ 'AddNewUser' | trans ({}, "user") }}
            </a><br>

            <div class="tablediv">
                <div class="contenttitle">
                    <h4> {{ 'Staff' | trans ({}, "user") }}</h4>
                </div>
                <form>
                    <div class="tab-content">
                        <table style="margin-top: 20px" class="table postsend">
                            <thead>
                            <tr>

                                <th>{{ 'Id' | trans ({}, "common") }}</th>
                                <th>{{ 'FullName' | trans ({}, "user") }}</th>
                                <th>{{ 'UserName' | trans ({}, "user") }}</th>
                                <th>{{ 'Entity' | trans ({}, "user") }}</th>
                                <th>{{ 'Status' | trans ({}, "user") }}</th>
                                <th>{{ 'Role' | trans ({}, "user") }}</th>
                                <th>{{ 'Operation' | trans ({}, "common") }}</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for user in pagination %}
                                <tr>
                                    <td>{{ user.id }}</td>

                                    <td>{{ user.firstname }}.{{ user.lastname }}</td>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.Entiti.entName }}</td>
                                    <td>
                                        {% if user.enabled==0 %}
                                            {{ 'InActive' | trans ({}, "user") }}
                                        {% else %}
                                            {{ 'Active' | trans ({}, "user") }}
                                        {% endif %}
                                    </td>
                                    <td>{{ user.roles[0] }}</td>

                                    <td class="td-actions">


                                        <a class="btn_actions" href="{{ path('RetailerStaffEdit',{'id':user.id }) }}">{{ 'Edit' | trans ({}, "user") }}  </a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {#{button pagination}#}
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}