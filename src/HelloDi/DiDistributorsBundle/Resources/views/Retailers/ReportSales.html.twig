{% extends 'HelloDiDiDistributorsBundle:Menu:AdminRetailer.html.twig' %}

{% block title %}
    Sales Report
{% endblock title %}

{% set MU = 'report' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <span class="link">Sales Report</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-list-alt"></i>
    Sales
{% endblock %}

{% block Body %}
    <div class="span">
        <div class="widget stacked ">
            <div class="widget-content">

                <div class="form_search">
                    <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search">Search Sales</p>
                        </span>
                    </h5>

                    <form class="form-horizontal SearchForm" action="{{ path('RetailerSale') }}" method="post" {{ form_enctype(form) }}>

                        <fieldset>
                            <div class="control-group datepicker1">
                                {{ form_label(form.DateStart) }}

                                   {{ form_widget(form.DateStart) }}

                            </div>
                            <div class="control-group datepicker2">
                                {{ form_label(form.DateEnd) }}

                                {{ form_widget(form.DateEnd) }}

                            </div>

                            <div class="control-group">
                                {{ form_label(form.ItemType) }}
                                <div class="controls">
                                {{ form_widget(form.ItemType) }}
                                    </div>
                            </div>
                            <div class="control-group">
                                {{ form_label(form.ItemName) }}
                                <div class="controls">
                                {{ form_widget(form.ItemName) }}
                                    </div>
                            </div>

                            <div class="control-group">
                                {%   if(User.roles[0]=='ROLE_RETAILER_ADMIN') %}
                                    {{ form_label(form.Staff,'Staff:') }}
                                <div class="controls">
                                    {{ form_widget(form.Staff) }}
                                    </div>
                                {% endif %}
                            </div>
                            <hr>
                            <input type="hidden" value="1" name="page" id="search_page" >
                            <input class="btn btn-primary" type="submit" value="Search">
                        </fieldset>
                    </form>
                    <script type="text/javascript">
                        $(function () {
                            $(".SearchForm").hide();
                            $('.TitleShow1').click(function () {
                                $('.SearchForm').slideToggle();
                                $('#search_logo').removeAttr('class');

                                if ($('.title_search').html() == 'Search Sales') {
                                    $('.title_search').html('Close Search');
                                    $('#search_logo').attr('class', 'icon-remove');
                                }
                                else {
                                    $('.title_search').html('Search Sales');
                                    $('#search_logo').attr('class', 'icon-search');
                                }

                                var x = $('.form_search').offset().top - 20;
                                $('body,html').animate({
                                    scrollTop: x
                                }, 800);
                            });

                        });
                    </script>
                </div>


                <!-- Start Table -->

                    <div class="tablediv">
                        <div class="contenttitle">
                            <h4>Sales Report</h4>
                        </div>
                        <form>
                            <div class="tab-content">

                                <table style="margin-top: 20px"
                                       class="table table-bordered table-striped table-highlight postsend">
                                    <thead>
                                    <tr>
                                        <th>{{ 'Date' | trans ({}, "account") }}</th>
                                        <th>{{ 'Item' | trans ({}, "account") }}</th>
                                        <th>{{ 'FaceValue' | trans ({}, "account") }}</th>
                                        <th>{{ 'Buying Price' | trans ({}, "account") }}</th>
                                        <th>{{ 'Serial Number' | trans ({}, "account") }}</th>
                                        <th>{{ 'Seller' | trans ({}, "account") }}</th>
                                        <th>{{ 'Vat' | trans ({}, "account") }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for Tr in pagination %}
                                        <tr>

                                            <td>{{ Tr.tranDate|date('Y-m-d H:i:s') }}</td>
                                            <td>{{ Tr.Code.Item.itemName}}</td>
                                            <td>{{ Tr.Code.Item.itemFaceValue}}</td>
                                            <td>{{ Tr.tranAmount }}</td>
                                            <td>{{ Tr.Code.serialNumber }}</td>
                                            <td>{{ Tr.User.username }}</td>
                                            <td>Vat</td>

                                        </tr>

                                    {% endfor %}

                                    </tbody>
                                   </table>

                            </div>
                        </form>

                    </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
                <!-- End Table -->

            </div>
        </div>
    </div>
{% endblock %}