{% extends 'HelloDiDiDistributorsBundle:Menu:AdminRetailer.html.twig' %}

{% block title %}
    Add User
{% endblock title %}

{% set MU = 'setting' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('RetailerStaff') }}">Stuff</a>
    <span class="link">Add User</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-check"></i>
    New User
{% endblock %}


{% block Link_Footer %}

{% endblock %}

{% block Body %}
    <div class="span">
        <div class="widget-content" >
            <div class="widget-header">
                <h3>Add Users</h3>
            </div> <!-- /widget-header --><br>

            <form class="form-horizontal" action="{{ path('RetailerStaffAdd',{'id':Account.id}) }}" method="post" >

                <div class="control-group">
                    {{ form_label(form.firstname) }}

                    {{ form_widget(form.firstname) }}
                </div>

                <div class="control-group">
                    {{ form_label(form.lastname) }}

                    {{ form_widget(form.lastname) }}
                </div>
                <div class="control-group">
                    {{ form_label(form.username) }}

                    {{ form_widget(form.username) }}
                </div>

                <div class="control-group">
                    {{ form_label(form.mobile) }}

                    {{ form_widget(form.mobile) }}
                </div>

                <div class="control-group">
                    {{ form_label(form.email) }}

                    {{ form_widget(form.email) }}
                </div>

                <div class="control-group">

                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                </div>

                <div class="control-group">
                    {{ form_label(form.plainPassword.second) }}

                    {{ form_widget(form.plainPassword.second) }}
                </div>

                <div class="control-group">

                    {{ form_label(form.language) }}
                    <div class="controls">
                        {{ form_widget(form.language) }}
                    </div>
                </div>
                <div class="control-group">
                    {{ form_errors(form.enabled) }}
                    {{ form_label(form.enabled) }}
                    <div class="controls">
                        {{ form_widget(form.enabled) }}
                    </div>
                </div>


                <div class="control-group">
                    {{ form_errors(form.roles[0]) }}
                    {{ form_label(form.roles[0]) }}
                    <div class="controls">
                        {{ form_widget(form.roles[0]) }}
                    </div>
                </div>


                {{ form_widget(form._token) }}


                <div class="form-actions" style="margin-bottom: 0" >
                    <input class="btn btn-primary" type="submit"  value="Create">
                    <a href="{{ path('RetailerStaff') }}" class="btn">Cancel</a>
                </div>

            </form>
        </div>
    </div>
{% endblock %}
