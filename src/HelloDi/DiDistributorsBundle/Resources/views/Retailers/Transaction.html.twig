{% extends 'HelloDiDiDistributorsBundle:Menu:AdminRetailer.html.twig' %}

{% block title %}
    Transactions
{% endblock title %}

{% set MU = 'trans' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <span class="link">Transaction History</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-money"></i>
    Transaction History
{% endblock %}

{% block Body %}
    <div class="span" >
        <div class="widget stacked ">
            <div class="widget-content">
                <a class="btn-large button btn btn-primary " href="{{ path('hellodi_transactions_new') }}">
                    Recharge
                </a>

                <div class="form_search">
                    <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search">Filter List</p>
                        </span>
                    </h5>

                    <form class="form-horizontal SearchForm" action="{{ path('RetailerTransaction') }}" method="POST" >


                        <div class="control-group">
                            <label class="control-label" >Trade Date
                            </label>
                            <div class="controls">
                                {{ form_widget(form.TypeDate[0]) }}
                            </div>
                        </div>

                        <div class="control-group">
                            <label class="control-label" >Looking Date
                            </label>
                            <div class="controls">
                                {{ form_widget(form.TypeDate[1]) }}
                            </div>
                        </div>
                        <div class="control-group datepicker1">
                            {{ form_label(form.DateStart) }}

                                {{ form_widget(form.DateStart) }}

                        </div>
                        <div class="control-group datepicker2">
                            {{ form_label(form.DateEnd) }}

                                {{ form_widget(form.DateEnd) }}

                        </div>

                        <div class="control-group">
                            {{ form_label(form.Type) }}
                            <div class="controls">
                                {{ form_widget(form.Type) }}
                            </div>
                        </div>
                        <div class="control-group">
                            {{ form_label(form.Action) }}
                            <div class="controls">
                                {{ form_widget(form.Action) }}
                            </div>
                        </div>


                        <hr>
                        <input type="hidden" value="1" name="page" id="search_page" >
                        <input class="btn btn-primary" type="submit" value="Search">

                    </form>
                    <script type="text/javascript">

                        $("#form_Type").change(function(){
                            val= $("#form_Type").val();
                            $("#form_Action").html('<option value="All">Please wait ...</option>');
                            $.post('{{ path("RetailerLoadActiowOwn") }}',{id: val},function(result){
                                $("#form_Action").html(result);
                            })
                        });

                        $(function () {


                            Form_Search(1,"Filter List");

                        });
                    </script>
                </div>

                <div class="tablediv">

                    <div class="contenttitle">
                        <h4>History</h4>
                    </div>
                    <form>
                        <div class="tab-content">
                            <table style="margin-top: 20px"
                                   class="table table-bordered table-striped table-highlight postsend">
                                <thead>
                                <tr>
                                    <th>{{ 'Date' | trans ({}, "account") }}</th>
                                    <th>{{ 'Description' | trans ({}, "account") }}</th>
                                    <th>{{ 'Credit' | trans ({}, "account") }}</th>
                                    <th>{{ 'Debit' | trans ({}, "account") }}</th>
                                    <th>{{ 'Balance' | trans ({}, "account") }}</th>
                                    <th>{{ 'Manage' | trans ({}, "account") }}</th>

                                </tr>
                                </thead>
                                <tbody>

                                {% for tran in pagination %}
                                    <tr>
                                        <td>

                                            {% if typedate==0 %}
                                            {{ tran.tranDate|date('Y-m-d') }}</td>
                                        {% else %}
                                        {{ tran.tranInsert|date('Y-m-d H:i:s') }}</td>
                                        {% endif %}
                                          </td>

                                        <td>{{ tran.tranDescription}}</td>

                                        {% if tran.tranAmount>=0 %}
                                            <td>{{ tran.tranAmount }}</td>
                                            <td>------</td>
                                        {% else %}
                                            <td>------</td>
                                            <td>{{ -tran.tranAmount }}</td>
                                        {% endif %}
                                        <td>

                                            {% set balance=tran.tranBalance+tran.tranAmount %}
                                            {{ balance }}

                                        </td>

                                        <td class="td-actions">

                                            <a class="btn_actions" href="{{ path('RetailerDetailsTransaction',{'id':tran.id }) }}">Details</a>

                                        </td>

                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                        <div class="navigation">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}