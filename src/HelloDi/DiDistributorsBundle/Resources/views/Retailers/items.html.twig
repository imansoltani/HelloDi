{% extends 'HelloDiDiDistributorsBundle:Menu:AdminRetailer.html.twig' %}

{% block title %}
    Items
{% endblock title %}

{% set MU = 'item' %}

{% block Site_Map %}
    <a class="link" href="{{ path('distributors_dashboard') }}">Home</a>
    <span class="link">Items</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-check"></i>
    List Of Items
{% endblock %}

{% block Link_Footer %}

{% endblock %}

{% block Body %}
    <div class="span">

        <div class="widget stacked">
            <div class="widget-content">
                <a class="btn-large button btn btn-primary " href="#">
                    New Request
                </a>
                <br>


                <div style="margin-top: 5px" class="tablediv">

                    <form>
                        <div class="tab-content datatable">
                            <table id="example" class="table postsend">
                                <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Favorite</th>
                                    <th>name</th>
                                    <th>faceValue</th>
                                    <th>type</th>
                                    <th>Price(Currency)</th>
                                    <th>Manage</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for price in prices %}
                                    <tr>
                                        <td>{{ price.item.id }}</td>
                                        <td>
                                            <a
                                                    class="
                                                    {% if price.isFavourite==0 %}
                                                        unfav
                                                    {% else %}
                                                        fav
                                                    {% endif %} favorite" href="{{ path('Retailer_Items_Change_Favorite',{'priceid':price.id}) }}">
                                                <i class="icon-star"></i>
                                            </a>
                                        </td>
                                        <td>{{ price.item.itemName }}</td>
                                        <td>{{ price.item.itemFaceValue }}</td>
                                        <td>{% if price.item.itemType==0 %}Mobile{% elseif price.item.itemType==1 %}Internet{% else %}Tel{% endif %}</td>
                                        <td>{{ price.price }}
                                            {{ price.priceCurrency }}</td>
                                        <td>
                                            <a class="btn_actions" href="#">details</a>


                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                        <input type="hidden" name="itemid" id="itemid" value=""/>
                    </form>
                </div>

                <script type="text/javascript"
                        src="{{ asset('bundles/hellodi/js/libs/jquery-1.9.1.min.js') }}"></script>

                <script type="text/javascript"
                        src="{{ asset('bundles/hellodi/js/libs/jquery.dataTables.nightly.js') }}"></script>
                <script type="text/javascript">
                    $(document).ready(function () {
                        Fix_Size();
                    });

                </script>
            </div>
        </div>
    </div>
{% endblock %}