{% extends 'HelloDiDiDistributorsBundle:Menu:AdminRetailer.html.twig' %}

{% block title %}
    Transactions
{% endblock title %}

{% set MU = 'trans' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('RetailerTransaction') }}">Transaction History</a>
    <span class="link">Transaction Details</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-money"></i>
    Transaction Details
{% endblock %}

{% block Body %}


<div class="span">
    <div class="widget stacked ">
          <div class="widget-content">

              <!--------------------------------------->

              <div class="widget-header">
                  <h3>Details</h3>
              </div> <!-- /widget-header -->

              <form class="form-horizontal">

                  <fieldset>

                      <div class="control-group">
                          <label class="control-label">
                              {{ 'id' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{{ tran.id}}" >
                          </div>
                      </div>

                      <div class="control-group">
                          <label class="control-label">
                              {{ 'Date' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{{ tran.tranDate|date('y-M-d H:m:s') }}">
                          </div>
                      </div>

                      <div class="control-group">
                          <label class="control-label">
                              {{ 'function' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="Function">
                          </div>
                      </div>

                      <div class="control-group">
                          <label class="control-label">
                              {{ 'Account name' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{{ tran.Account.accName }}">
                          </div>
                      </div>



                      <div class="control-group">
                          <label class="control-label">
                              {{ 'Credit' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{% if tran.tranAmount>0 %} {{ tran.tranAmount }} {% elseif tran.tranAmount<0 %}--------{% endif %}">
                          </div>
                      </div>


                      <div class="control-group">
                          <label class="control-label">
                              {{ 'Debit' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              {% set balance=tran.tranBalance+tran.tranAmount %}
                              <input type="text" disabled="" value="{% if tran.tranAmount>0 %}--------{% elseif tran.tranAmount<0 %}{{ -tran.tranAmount }}{% endif %}">
                          </div>
                      </div>

                      <div class="control-group">
                          <label class="control-label">
                              <th>{{ 'Balance' | trans ({}, "account") }}</th>
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{% set balance=tran.tranBalance+tran.tranAmount %}{{ balance }}">
                          </div>
                      </div>


                      <div class="control-group">
                          <label class="control-label">
                              {{ 'User' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{{ tran.User.username }}">
                          </div>
                      </div>

                      <div class="control-group">
                          <label class="control-label">
                              {{ 'Item Name' | trans ({}, "account") }}
                          </label>
                          <div class="controls">
                              <input type="text" disabled="" value="{% if tran.Code is not null  %}{{ tran.Code.Item.itemName }}{% else %}not have code{% endif %}">
                          </div>
                      </div>

                  </fieldset>

                  <div class="form-actions">
                      <a href="{{ path('RetailerTransaction') }}" class="btn btn-primary">
                          Return
                      </a>
                  </div>
              </form>


          </div>
    </div>
</div>

    {% endblock %}