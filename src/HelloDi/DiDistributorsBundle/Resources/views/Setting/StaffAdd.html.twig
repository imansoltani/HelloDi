{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    Add User
{% endblock title %}

{% set MU = 'setting' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('RetailerStaff') }}">Staff</a>
    <span class="link">Add User</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-check"></i>
    New User
{% endblock %}


{% block Link_Footer %}

{% endblock %}

{% block Body %}
    <div class="span">
        <div class="widget-content" >
            <div class="widget-header">
                <h3>Add Users</h3>
            </div> <!-- /widget-header --><br>


            {#{% for error in form_errors(form) %}#}
                      {#{{ error.message  }}#}
            {#{% endfor %}#}

            <form class="form-horizontal" action="{{ path('MasterStaffAdd',{'id':Entiti.id}) }}" method="post" >
                {{ form_errors(form) }}
                <div class="control-group">
                    {{ form_label(form.firstname) }}
                    <div class="controls money">
                        {{ form_widget(form.firstname) }} <span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.lastname) }}
                    <div class="controls money">
                        {{ form_widget(form.lastname) }} <span class="icon-certificate"></span>
                    </div>
                </div>
                <div class="control-group">
                    {#{{ form_errors(form.username) }}#}
                    {{ form_label(form.username) }}
                    <div class="controls money">
                        {{ form_widget(form.username) }} <span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.mobile) }}
                    {{ form_widget(form.mobile) }}
                </div>

                <div class="control-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>


                <div class="control-group">
                    {{ form_label(form.enabled) }}
                    <div class="controls money">
                        <div class="controls">
                            {{ form_widget(form.enabled) }}
                        </div>
                        <span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.plainPassword.first) }}
                    <div class="controls money">
                        {{ form_widget(form.plainPassword.first) }} <span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.plainPassword.second) }}
                    <div class="controls money">
                        {{ form_widget(form.plainPassword.second) }} <span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.language) }}
                    <div class="controls">
                        {{ form_widget(form.language) }}
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.roles[0]) }}
                    <div class="controls money">
                        <div class="controls">
                            {{ form_widget(form.roles[0]) }}
                        </div>
                        <span class="icon-certificate"></span>
                    </div>
                </div>


                {{ form_widget(form._token) }}

                <div class="form-actions" style="margin-bottom: 0" >
                    <input class="btn btn-primary" type="submit"  value="Create">
                    <a href="javascript:history.go(-1)" class="btn">Cancel</a>
                </div>

            </form>
        </div>
    </div>

{% endblock %}
