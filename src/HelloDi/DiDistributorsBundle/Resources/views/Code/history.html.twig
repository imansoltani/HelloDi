{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    Codes
{% endblock title %}

{% set MU = 'code' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('code') }}">Code</a>
    <span class="link">Code History</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-list-alt"></i>
    Code History
{% endblock %}

{% block Body %}

    <div class="span">
        <div class="widget stacked ">


            <div class="widget-content">

                <div class="tablediv">
                    <div class="contenttitle">
                        <h4>Code Info</h4>
                    </div>
                    <div class="tab-content">
                        <table style="margin-top: 20px" class="table postsend">
                            <thead>
                            <tr>

                                <th>item</th>
                                <th>type</th>
                                <th>serialNo</th>
                                <th>status</th>
                                <th>Production</th>
                                <th>Expiry</th>
                            </tr>
                            </thead>

                            <tbody>
                            <tr>
                                <td style="font-weight: bold">{{ code.item.itemName }}</td>
                                <td style="font-weight: bold">{% if code.item.itemType==0 %} Mobile {% elseif code.item.itemType==1 %} Internet {% elseif code.item.itemType==2 %} Tel {% endif %}</td>
                                <td style="font-weight: bold">{{ code.serialNumber }}</td>
                                <td style="font-weight: bold">{% if code.status==1 %}Not Sale{% else %}Sale{% endif %}</td>
                                <td style="font-weight: bold">{{ code.input.dateProduction|date('Y/m/d') }}</td>
                                <td style="font-weight: bold">{{ code.input.dateExpiry|date('Y/m/d') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr>

                <div class="tablediv">
                    <div class="contenttitle">
                        <h4>Code History</h4>
                    </div>
                    <div class="tab-content">
                        <table style="margin-top: 20px" class="table postsend">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Account<br/>(name/type)</th>
                                <th>User</th>
                                <th>Action</th>
                                <th>Credit</th>
                                <th>Debit</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tran in code.Transactions %}
                                <tr>
                                    <td>{{ tran.tranDate|date('Y/m/d') }}</td>
                                    <td>{{ tran.Account.accName }} /
                                        {% if tran.Account.accType==0 %}distributor
                                        {% elseif tran.Account.accType==1 %}provider
                                        {% elseif tran.Account.accType==2 %}retailer
                                        {% endif %}
                                    </td>
                                    <td>{{ tran.User.firstName }} {{ tran.User.lastName }}</td>
                                    <td>{{ tran.tranAction }}</td>
                                    <td>{{ tran.tranCredit }}</td>
                                    <td>{{ tran.tranDebit }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}
