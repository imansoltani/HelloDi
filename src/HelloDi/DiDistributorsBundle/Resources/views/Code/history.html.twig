{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    {{ 'Codes' | trans ({}, "code") }}
{% endblock title %}

{% set MU = 'code' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('code') }}">{{ 'Codes' | trans ({}, "code") }}</a>
    <span class="link">{{ 'History' | trans ({}, "code") }}</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-list-alt"></i>
    {{ 'History' | trans ({}, "code") }}
{% endblock %}

{% block Body %}

    <div class="span">
        <div class="widget stacked ">


            <div class="widget-content">

                {% if code.status==0 %}
                    <a href="{{ path('code_creditnote',{'id':code.id}) }}" header="{{ 'Alert' | trans ({}, "common") }}" message="{{ 'Are_you_sure_to_Credit_Node' | trans ({}, "message") }}" class="YesNoMessage btn btn-danger">{{ 'CreditNote' | trans ({}, "code") }}</a>
                    <a href="{{ path('code_creditnoteanddeatbeat',{'id':code.id}) }}" header="{{ 'Alert' | trans ({}, "common") }}" message="{{ 'Are_you_sure_to_Credit_Node_And_Deat_Beat' | trans ({}, "message") }}" class="YesNoMessage btn btn-danger">{{ 'CreditNoteAndDeadBeat' | trans ({}, "code") }}</a><br/><br/>
                {% elseif not isremoved %}
                    <a href="{{ path('code_deadbeat',{'id':code.id}) }}" header="{{ 'Alert' | trans ({}, "common") }}" message="{{ 'Are_you_sure_to_Dead_Beat' | trans ({}, "message") }}" class="YesNoMessage btn btn-danger">{{ 'DeadBeat' | trans ({}, "code") }}</a><br/><br/>
                {% endif %}
                <div class="tablediv">
                    <div class="contenttitle">
                        <h4>{{ 'Info' | trans ({}, "code") }}</h4>
                    </div>
                    <div class="tab-content">
                        <table style="margin-top: 20px" class="table postsend">
                            <thead>
                            <tr>
                                <th>{{ 'Item' | trans ({}, "item") }}</th>
                                <th>{{ 'ItemType' | trans ({}, "item") }}</th>
                                <th>{{ 'SerialNumber' | trans ({}, "code") }}</th>
                                <th>{{ 'Status' | trans ({}, "code") }}</th>
                                <th>{{ 'DateProduction' | trans ({}, "code") }}</th>
                                <th>{{ 'DateExpiry' | trans ({}, "code") }}</th>
                                <th>{{ 'Operator' | trans ({}, "operator") }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            <tr>
                                <td style="font-weight: bold">{{ code.item.itemName }}</td>
                                <td style="font-weight: bold">
                                    {% if code.item.itemType=='dmtu' %}
                                        {{ 'Mobile' | trans ({}, "item") }}
                                    {% elseif code.item.itemType=='clcd' %}
                                        {{ 'Calling_Card' | trans ({}, "item") }}
                                    {% else %}
                                        {{ 'E-payment' | trans ({}, "item") }}
                                    {% endif %}
                                </td>
                                <td style="font-weight: bold">{{ code.serialNumber }}</td>
                                <td style="font-weight: bold">{% if code.status==1 %}{{ 'Available' | trans ({}, "code") }}{% else %}{{ 'Unavailable' | trans ({}, "code") }}{% endif %}</td>
                                <td style="font-weight: bold">{{ code.input.dateProduction|date('Y/m/d') }}</td>
                                <td style="font-weight: bold">{{ code.input.dateExpiry|date('Y/m/d') }}</td>
                                <td style="font-weight: bold">{{ code.item.operator.name }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr>

                <div class="tablediv">
                    <div class="contenttitle">
                        <h4>{{ 'History' | trans ({}, "code") }}</h4>
                    </div>
                    <div class="tab-content">
                        <table style="margin-top: 20px" class="table postsend">
                            <thead>
                            <tr>
                                <th>{{ 'Date' | trans ({}, "transaction") }}</th>
                                <th>{{ 'Account' | trans ({}, "accounts") }}<br/>({{ 'Name' | trans ({}, "accounts") }}/{{ 'Type' | trans ({}, "accounts") }})</th>
                                <th>{{ 'User' | trans ({}, "user") }}</th>
                                <th>{{ 'Action' | trans ({}, "transaction") }}</th>
                                <th>{{ 'Credit' | trans ({}, "transaction") }}</th>
                                <th>{{ 'Debit' | trans ({}, "transaction") }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tran in code.Transactions %}
                                <tr>
                                    <td>{{ tran.tranDate|date('Y/m/d') }}</td>
                                    <td>{{ tran.Account.accName }} /
                                        {% if tran.Account.accType==0 %}{{ 'Distributor' | trans ({}, "accounts") }}
                                        {% elseif tran.Account.accType==1 %}{{ 'Provider' | trans ({}, "accounts") }}
                                        {% elseif tran.Account.accType==2 %}{{ 'Retailer' | trans ({}, "accounts") }}
                                        {% endif %}
                                    </td>
                                    <td>{{ tran.User.firstName }} {{ tran.User.lastName }}</td>
                                    <td>{{ tran.tranAction }}</td>
                                    <td>{{ tran.tranCredit }}</td>
                                    <td>{{ tran.tranDebit }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}
