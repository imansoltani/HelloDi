{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">Distributor</a>
    <span class="link">Sub Accounts</span>
{% endblock Site_Map %}


{% block Link_Head %}

    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/jquery.dataTables.nightly.js') }}"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            Fix_Size();
        });

    </script>

{% endblock %}


{% block Tab %}
    <div class="widget-header">
        <h3>
            Sub Accounts List
        </h3>
    </div> <!-- /widget-header -->







        <div style="margin-top: 5px" class="tablediv">
            <form>
                <div class="tab-content datatable">
                    <table id="example" class="table postsend">
                        <thead>
                        <tr>

                            <th>Id</th>
                            <th>Operation</th>
                            <th>Name</th>
                            <th>Entity Name</th>
                            <th>Type</th>
                            <th>Balance</th>
                            <th>CreditLimit</th>


                        </tr>
                        </thead>
                        <tbody>
                        {% for childaccount in pagination %}
                            <tr>

                                <td>{{ childaccount.id }}</td>
                                <td class="td-actions">

                                    <a class="btn_actions"
                                       href="{{ path('Master_Retailer_Transaction',{'id':childaccount.id}) }}">ShowTranscation</a>

                                </td>

                                <td>
                                    {% if childaccount.accName=='' %}
                                        Null
                                    {% else %}
                                        {{ childaccount.accName }}
                                    {% endif %}

                                </td>
                                <td>


                                    {{ childaccount.Entiti.entName }}


                                </td>
                                <td>{% if childaccount.accType==0 %}
                                        Distributors
                                    {% elseif childaccount.accType==2 %}
                                        Retailes
                                    {% elseif childaccount.accType==1 %}
                                        Provider
                                    {% endif %}
                                </td>

                                <td>

                                    {{ childaccount.accBalance }}


                                </td>

                                <td>


                                    {{ childaccount.accCreditLimit }}


                                </td>


                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {#{button pagination}#}

                    <input type="hidden" name="id" class="accountid" value=""/>
                </div>

            </form>
        </div>
    </div>



{% endblock %}



