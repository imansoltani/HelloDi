{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '4' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Providers' | trans ({}, "accounts") }}</a>
    <span class="link">{{ 'Info' | trans ({}, "accounts") }}</span>
{% endblock Site_Map %}

{% block Tab %}

    <div class="widget-header">
        <h3>{{ 'Info' | trans ({}, "accounts") }}</h3>
    </div> <!-- /widget-header -->
<form style="margin-top: 20px" action="{{ path('EditAccountProv',{'id':Account.id}) }}" method="post" class="form-horizontal" >




    <div class="control-group">

        <label class="control-label" >{{ 'Name' | trans ({}, "common") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accName }}" >
        </div>
    </div>


    <div class="control-group Need">
        {{ form_label(form_edit.accTerms,'Terms' | trans ({}, "accounts")) }}

        {{ form_widget(form_edit.accTerms,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}

        {{ form_errors(form_edit.accTerms) }}
    </div>


    <div class="control-group">
        <label class="control-label" >{{ 'Balance' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accBalance}}" >
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" >{{ 'Currency' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accCurrency}}" >
        </div>
    </div>


    <div class="control-group">
        <label class="control-label" >{{ 'Creditlimit' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="0" >
        </div>
    </div>


    <div class="control-group">
        <label class="control-label" >{{ 'DefaultLanguage' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accDefaultLanguage }}" >
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" >{{ 'TimeZone' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large"

                   {% if Account.accTimeZone is not null %}
                   value="{{ Account.accTimeZone }}"
            {% else %}
                   value="--------"
            {% endif %}
                    >
        </div>
    </div>


    <div class="control-group">
        <label class="control-label" >{{ 'Type' | trans ({}, "common") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="Distributors" >
        </div>
    </div>



    {{form_widget(form_edit._token)}}

    <input type="hidden" name="accountid" value="{{ id }}"/>

    <div class="form-actions" style="margin-bottom: 0" >
        <button class="btn btn-primary" type="submit">{{ 'Save' | trans ({}, "common") }}</button>

    </div>

</form>

{% endblock Tab %}
