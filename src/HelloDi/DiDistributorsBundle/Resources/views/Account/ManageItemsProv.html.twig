{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">Provider</a>
    <span class="link">Items</span>
{% endblock Site_Map %}



{% block Tab %}

    <div class="widget-header">
        <h3>Provider Items</h3>
    </div> <!-- /widget-header -->
    <br/>
    <a class=" btn btn-primary btn-large" href="{{ path('AddItemProv',{'id':Account.id}) }}">
        Add new Item
    </a>
    <br/>
    <br/>

    <div class="tablediv">
        <div class="contenttitle">
            <h4>Items</h4>
        </div>
        <div class="tab-content">
            <table style="margin-top: 20px" class="table postsend">

                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Face Value (Currency)</th>
                    <th>Code</th>
                    <th>Type</th>
                    <th>Price (Currency)</th>
                    <th>Status</th>
                    <th>Management</th>
                </tr>
                </thead>

                <tbody>
                {% for price in prices %}
                    <tr>
                        <td>{{ price.item.id }}</td>
                        <td>{{ price.item.itemName }}</td>
                        <td>{{ price.item.itemFaceValue }} {{ price.item.itemCurrency }}</td>
                        <td>{{ price.item.itemCode }}</td>
                        <td>{% if price.item.itemType==0 %}Mobile{% elseif price.item.itemType==1 %}Internet{% else %}Tel{% endif %}</td>
                        <td>{{ price.price }} {{ price.priceCurrency }}</td>
                        <td>{% if price.priceStatus == 1 %}Active{% else %}Inactive{% endif %}</td>
                        <td class="td-actions" >
                            <a class="btn_actions" href="{{ path('EditItemProv',{'id':Account.id,'itemid':price.id}) }}">Manage</a>
                            <br/>
                            <a class="btn_actions" href="{{ path('UploadInputProv',{'id':Account.id,'itemid':price.item.id}) }}">Upload Code</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
{% endblock Tab %}
