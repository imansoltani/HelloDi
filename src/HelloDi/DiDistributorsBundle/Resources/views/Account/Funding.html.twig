{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '3' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">{{ 'Distributors' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('MasterDistTransaction',{'id':Account.id}) }}">{{ 'Transactions' | trans ({}, "transaction") }}</a>
    <span class="link">{{ 'FundDistributor' | trans ({}, "accounts") }}</span>
{% endblock Site_Map %}


{% block Tab %}
<div class="row">
    <div class="span5">
        <div class="widget-header">
            <h3>
                {{ 'FundDistributorBalance' | trans ({}, "accounts") }}
            </h3>
            <br>

       {{ 'CurrentDistributorBalance' | trans ({}, "accounts") }} : {{ Account.accBalance }} {{ Account.accCurrency }}

            <br>
        </div> <!-- /widget-header -->



        <form style="margin-top: 20px" action="{{ path('MasterDistApplyFunding',{'id':Account.id}) }}" method="post" class="form-horizontal YesNoMessage" header="{{ 'Fund_distributor'|trans({},'message') }}" message="{{ 'Are_you_sure_you_perform_this_operation?'|trans({},'message') }}" >

            <fieldset>

                <div class="control-group">

                    {{ form_label(formapplay.Amount) }}

                    {{ form_errors(formapplay.Amount) }}
                    <div class="controls money">
                        {{ form_widget(formapplay.Amount,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} })  }}<span class="icon-certificate"></span>
                    </div>


                </div>

                <div class="control-group ">
                    {{ form_label(formapplay.As) }}
                    <div class="controls money">
                        {{ form_widget(formapplay.As)  }} <span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="control-group ">
                    {{ form_label(formapplay.Description ) }}
                    <div class="controls money">
                        {{ form_widget(formapplay.Description )  }}<span class="icon-certificate"></span>
                    </div>
                </div>


                <div class="form-actions" style="margin-bottom: 0" >
                    <button class="btn btn-primary" id="Applay" type="submit">{{ 'Applay' | trans ({}, "common") }}</button>
                    <a href="javascript:history.go(-1)" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>
                </div>


            </fieldset>

        </form>
    </div>
    {% if is_granted('ROLE_MASTER_ADMIN') %}
    <div class="span5 LeftSpan">
        {#//----Form update----//#}
        <div class="widget-header">
            <h3>
                {{ 'UpdateDistributorCreditLimit' | trans ({}, "accounts") }}

            </h3>
            <br>

            {{'CurrentDistributorCreditlimit' | trans ({}, "accounts") }}:{{ Account.accCreditlimit }} {{ Account.accCurrency }}
            <br>
        </div> <!-- /widget-header -->

        <form style="margin-top: 20px" action="{{ path('MasterDistUpdateFunding',{'id':Account.id}) }}" method="post" class="form-horizontal YesNoMessage" header="{{ 'Fund_distributor'|trans({},'message') }}" message="{{ 'Are_you_sure_you_perform_this_operation?'|trans({},'message') }}" >
            <fieldset>

                <div class="control-group">

                    {{ form_label(formupdate.Amount) }}


                    <div class="controls money">
                        {{ form_widget(formupdate.Amount,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} })  }}<span class="icon-certificate"></span>
                    </div>


                </div>

                <div class="control-group">
                    {{ form_label(formupdate.As) }}
                    <div class="controls money">
                        {{ form_widget(formupdate.As)  }}<span class="icon-certificate"></span>
                    </div>
                </div>

                <div class="form-actions" style="margin-bottom: 0" >
                    <button class="btn btn-primary" type="submit">{{ 'Update' | trans ({}, "common") }}</button>
                    <a href="javascript:history.go(-1)" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>
                </div>


            </fieldset>

        </form>
    </div>

        {% endif %}
        </div>

{% endblock %}