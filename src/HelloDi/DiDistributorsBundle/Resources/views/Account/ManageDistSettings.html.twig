{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '5' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">{{ 'Distributors' | trans ({}, "accounts") }} </a>
    <span class="link">{{ 'Settings' | trans ({}, "accounts") }}</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="widget-header">
        <h3>
            {{ 'AccountSetting' | trans ({}, "accounts") }}

        </h3>
    </div> <!-- /widget-header -->
<form style="margin-top: 20px"  class="form-horizontal"   action="{{ path('ManageDistSettings',{'id':Account.id}) }}" method="post">


    <div class="control-group">
        <label class="control-label" >{{ 'Id' | trans ({}, "common") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.id }}" >
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" >{{ 'Name' | trans ({}, "common") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accName }}" >
        </div>
    </div>


    <div class="control-group Need">
        {{ form_label(form_edit.accTerms) }}
         {{ form_widget(form_edit.accTerms, { 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
    || (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
    || (95<event.keyCode && event.keyCode<106)
    || (event.keyCode==8) || (event.keyCode==9)
    || (event.keyCode>34 && event.keyCode<40)
    || (event.keyCode==46) )'} }) }}
        {{ form_errors(form_edit.accTerms) }}
    </div>



    <div class="control-group">
        <label class="control-label" >
            {{ 'DefaultLanguage' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accDefaultLanguage }}" >
        </div>
    </div>

    <div class="control-group Need">
        {{ form_label(form_edit.accTimeZone) }}
        <div class="controls">
            {{ form_widget(form_edit.accTimeZone) }}
        </div>
        {{ form_errors(form_edit.accTimeZone) }}
    </div>

    <div class="control-group">
        <label class="control-label" >{{ 'Type' | trans ({}, "common") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ 'Distributor' | trans ({}, "accounts") }}" >
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" >{{ 'CreditLimit' | trans ({}, "accounts") }}</label>
        <div class="controls">
            <input type="text" disabled class="input-large" value="{{ Account.accCreditLimit }}" >
        </div>
    </div>


{{ form_widget(form_edit._token) }}
    <input type="hidden" value="{{ Account.id }}">

    <div class="form-actions">
        <input class="btn btn-primary" type="submit" value="{{ 'Save' | trans ({}, "common") }}">


    </div>

</form>



{% endblock %}