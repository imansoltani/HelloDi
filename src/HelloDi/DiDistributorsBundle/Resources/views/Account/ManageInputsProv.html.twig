{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '3' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Provider' | trans ({}, "accounts") }}</a>
    <span class="link">{{ 'Input' | trans ({}, "code") }}</span>
{% endblock Site_Map %}



{% block Tab %}

    <div class="widget-header">
        <h3>{{ 'Inputs' | trans ({}, "code") }}</h3>

    </div> <!-- /widget-header -->


    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
            <span>
                <i id="search_logo" class="icon-search"></i>
                <p class="title_search">{{ 'Search' | trans ({}, "common") }}</p>
            </span>
        </h5>
        <form class="form-horizontal SearchForm" action="#" method="post">
            <fieldset>
                <div class="control-group datepicker1">
                    {{ form_label(form.From) }}

                        {{ form_widget(form.From) }}

                </div>
                <div class="control-group datepicker2">
                    {{ form_label(form.To) }}

                        {{ form_widget(form.To) }}

                </div>
                <div class="control-group">
                    {{ form_label(form.item) }}
                    <div class="controls">
                        {{ form_widget(form.item) }}
                    </div>
                </div>

                {{ form_rest(form) }}
                <hr>
                <input class="btn btn-primary" type="submit" value="{{ 'Search' | trans ({}, "common") }}">
            </fieldset>
        </form>
        <script type="text/javascript">
            $(function () {

                Form_Search(0,"{{ 'Search' | trans ({}, "common") }}");

            });
        </script>
    </div>





    <div class="tablediv" >
        <div class="contenttitle">
            <h4>{{ 'Inputs' | trans ({}, "code") }}</h4>
        </div>
        <form>
            <div class="tab-content" >
                <table style="margin-top: 20px" class="table postsend">
                    <thead>
                    <tr>
                        <th>{{ 'Item' | trans ({}, "item") }}</th>
                        <th>{{ 'Batch' | trans ({}, "code") }}</th>
                        <th>{{ 'DateProduction' | trans ({}, "code") }}</th>
                        <th>{{ 'DateExpiry' | trans ({}, "code") }}</th>
                        <th>{{ 'Quantity' | trans ({}, "code") }}</th>
                        <th>{{ 'Value' | trans ({}, "code") }}</th>
                        <th>{{ 'Operation' | trans ({}, "common") }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for input in inputs %}
                        <tr>
                            <td>{{ input.Item.itemName }}</td>
                            <td>{{ input.batch }}</td>
                            <td>{{ input.dateProduction|date('Y/m/d') }}</td>
                            <td>{{ input.dateExpiry|date('Y/m/d') }}</td>
                            <td>{{ input.Codes.count }}</td>
                            <td>{{ render(controller('HelloDiDiDistributorsBundle:Account:CalcPrice', { 'account': Account , 'item': input.Item , 'count' : input.Codes.count })) }}</td>
                            <td class="td-actions" >
                                <a href="#" class="btn_actions" >{{ 'Details' | trans ({}, "common") }}</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </form>
    </div>

{% endblock %}
