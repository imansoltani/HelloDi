{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '4' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">Distributor</a>
    <a class="link" href="">Users</a>
    <span class="link">Add User</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="span" >
        <div class="widget-content">
            <div class="widget-header">
                <h3>Add User</h3>
            </div> <!-- /widget-header -->
            <br>

            <form class="form-horizontal" action="{{ path('MasterDistUserAdd',{'id':Account.id}) }}" method="post" >
                {{ form_errors(form) }}
                <div class="control-group">
                    {{ form_label(form.firstname) }}


                    <div class="controls money">
                        {{ form_widget(form.firstname) }} <span class="icon-certificate" ></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.lastname) }}
                    <div class="controls money">
                        {{ form_widget(form.lastname) }}
                    </div>
                </div>
                <div class="control-group">
                    {#{{ form_errors(form.username) }}#}
                    {{ form_label(form.username) }}
                    <div class="controls money">
                        {{ form_widget(form.username) }} <span class="icon-certificate" ></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.mobile) }}
                    {{ form_widget(form.mobile) }}
                </div>

                <div class="control-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>


                <div class="control-group">
                    {{ form_label(form.enabled) }}


                    <div class="controls money">
                        {{ form_widget(form.enabled) }} <span class="icon-certificate" ></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.plainPassword.first) }}

                    <div class="controls money">
                        {{ form_widget(form.plainPassword.first) }} <span class="icon-certificate" ></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.plainPassword.second) }}

                    <div class="controls money">
                        {{ form_widget(form.plainPassword.second) }} <span class="icon-certificate" ></span>
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.language) }}
                    <div class="controls">
                        {{ form_widget(form.language) }}
                    </div>
                </div>

                <div class="control-group">
                    {{ form_label(form.roles[0]) }}
                    <div class="controls">
                        {{ form_widget(form.roles[0]) }} <span class="icon-certificate"></span>
                    </div>
                </div>


                {{ form_widget(form._token) }}

                <div class="form-actions" style="margin-bottom: 0" >
                    <input class="btn btn-primary" type="submit"  value="Create">
                    <a href="javascript:history.go(-1)" class="btn">Cancel</a>
                </div>

            </form>
        </div>
    </div>
{% endblock %}



