{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Provider' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('ManageItemsProv',{id:Account.id}) }}">{{ 'Items' | trans ({}, "item") }}</a>
    <span class="link">{{ 'AddItem' | trans ({}, "item") }}</span>
{% endblock Site_Map %}

{% block Tab %}


    <div class="widget-header">
        <h3>{{ 'AddItem' | trans ({}, "item") }}</h3>
    </div> <!-- /widget-header -->

    <div class="tab-content">
        <form id="addprice" action="#" method="post" class="form-horizontal">

            <div class="control-group">
                {{ form_label(form.Item) }}
                <div class="controls money">
                    {{ form_widget(form.Item) }} <span class="icon-certificate"></span>
                </div>
                {{ form_errors(form.Item) }}
            </div>

            <div class="control-group price">
                {{ form_label(form.price) }}
                <div class="controls money" >{{ form_widget(form.price) }} | {{ Account.accCurrency }} <span class="icon-certificate"></span> </div>
                {{ form_errors(form.price) }}
            </div>

            {{form_widget(form._token)}}

            <div class="form-actions" style="margin-bottom: 0" >
                <input type="submit" class="btn btn-primary" value="{{ 'Add' | trans ({}, "common") }}"/>
                <a href="{{ path('ManageItemsProv',{id:Account.id}) }}" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>
            </div>


        </form>
    </div>
{% endblock Tab %}
