{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Provider' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('ManageItemsProv',{id:Account.id}) }}">{{ 'Items' | trans ({}, "item") }}</a>
    <span class="link">{{ 'Upload' | trans ({}, "code") }}</span>
{% endblock Site_Map %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'Upload' | trans ({}, "code") }}</h3>
    </div>



        <form action="{{ path("UploadInputProvSubmit",{'id':Account.id,'itemid':item.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">

            <div class="control-group">
                <label class="control-label">{{ 'Item' | trans ({}, "item") }}</label>
                <div class="controls money">
                    <input class="input-large" type="text" value="{{ item.itemName }}" disabled/>
                </div>
            </div>

            <div class="control-group">
                {{ form_label(form.File) }}
                <div class="controls money">
                    {{ form_widget(form.File) }}<span class="icon-certificate" ></span>
                </div>
            </div>

            <div class="control-group">
            {{ form_label(form.Batch) }}
                <div class="controls money">
            {{ form_widget(form.Batch,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}<span class="icon-certificate" ></span>
            </div></div>

            <div class="control-group">
            {{ form_label(form.ProductionDate) }}
                <div class="controls money datepicker1">
            {{ form_widget(form.ProductionDate) }}<span class="icon-certificate" ></span>
            </div></div>

            <div class="control-group">
            {{ form_label(form.ExpireDate) }}
                <div class="controls money datepicker2">
            {{ form_widget(form.ExpireDate) }}<span class="icon-certificate" ></span>
            </div></div>

            <div class="control-group">
            {{ form_label(form.delimiter) }}
                <div class="controls money">
                    {{ form_widget(form.delimiter) }}<span class="icon-certificate" ></span>
                 </div>
            </div>

            <div class="control-group">
            {{ form_label(form.SerialNumber) }}
                <div class="controls money">
            {{ form_widget(form.SerialNumber,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}<span class="icon-certificate" ></span>
            </div></div>

            <div class="control-group">
            {{ form_label(form.PinCode) }}
                <div class="controls money">
            {{ form_widget(form.PinCode,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} }) }}<span class="icon-certificate" ></span>
            </div></div>

            {{ form_rest(form) }}

            <div class="form-actions" style="margin-bottom: 0">
                <input type="submit" class="btn btn-primary" value="{{ 'Upload' | trans ({}, "code") }}"/>
            </div>
        </form>

{% endblock %}