{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '6' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">Distributor</a>
    <span class="link">Items</span>
{% endblock Site_Map %}

{% block Tab %}

    <div class="widget-header">
        <h3>Distributor Items</h3>
    </div> <!-- /widget-header -->


    <form method="post" action="{{ path('AddItemDist') }}">
        <input type="hidden" name="accountid" value="{{ Account.id }}"/>
        <input class=" btn btn-large btn-primary" type="submit" value="Add new Item"/>
    </form>

    <div class="tablediv">
        <div class="contenttitle">
            <h4>Items</h4>
        </div>
        <div class="tab-content">
            <table style="margin-top: 20px" class="table postsend">

                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Face Value (Currency)</th>
                    <th>Code</th>
                    <th>Type</th>
                    <th>Price (Currency)</th>
                    <th>Management</th>
                </tr>
                </thead>

                <tbody>
                {% for price in prices %}
                    <tr>
                        <td>{{ price.item.id }}</td>
                        <td>{{ price.item.itemName }}</td>
                        <td>{{ price.item.itemFaceValue }} {{ price.item.itemCurrency }}</td>
                        <td>{{ price.item.itemCode }}</td>
                        <td>{% if price.item.itemType==0 %}Mobile{% elseif price.item.itemType==1 %}Internet{% else %}Tel{% endif %}</td>
                        <td>{{ price.price }} {{ price.priceCurrency }}</td>
                        <td class="td-actions" >
                            <form method="post" action="{{ path('EditItemDist') }}">
                                <input type="hidden" name="priceid" value="{{ price.id }}"/>
                                <input type="submit" value="Edit Price"/>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
{% endblock Tab %}
