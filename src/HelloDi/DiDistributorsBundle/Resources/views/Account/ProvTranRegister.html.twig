{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">Provider</a>
    <span class="link">Register Transaction</span>
{% endblock Site_Map %}



{% block Tab %}
    <div class="widget-header">
        <h3>Register Transaction</h3>
    </div> <!-- /widget-header -->

    <form action="{{ path('ProvRegister',{'id':Account.id}) }}" method="post" class="form-horizontal" >

       {% for credeb in  form.CreditDebit %}
        <div class="control-group">

            {{ form_label(credeb) }}

            <div class="controls">
                {{ form_widget(credeb)  }}
            </div>

        </div>

      {% endfor %}

        <div class="control-group">

            {{ form_label(form.Amount) }}


                {{ form_widget(form.Amount)  }}


        </div>



        <div class="control-group">

            {{ form_label(form.TradeDate) }}

            <div class="controls">
                {{ form_widget(form.TradeDate)  }}
            </div>

        </div>



        <div class="control-group">

            {{ form_label(form.Description) }}

            <div class="controls">
                {{ form_widget(form.Description)  }}
            </div>

        </div>



        <div class="control-group">

            {{ form_label(form.Fees) }}

            <div class="controls" >{{ form_widget(form.Fees)  }} | {{ Account.accCurrency }}</div>

        </div>



        <div class="form-actions" style="margin-bottom: 0" >
            <button class="btn btn-primary" type="submit">Register</button>
        </div>
    </form>
{% endblock %}