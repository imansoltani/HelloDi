{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Providers' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('MasterProvTransaction',{'id':Account.id}) }}">{{ 'Transactions' | trans ({}, "transaction") }}</a>
    <span class="link">{{ 'RegisterTransaction' | trans ({}, "accounts") }}</span>
{% endblock Site_Map %}



{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'RegisterTransaction' | trans ({}, "accounts") }}</h3>
    </div> <!-- /widget-header -->

    <form action="{{ path('ProvRegister',{'id':Account.id}) }}" method="post" class="form-horizontal YesNoMessage" message="{{ 'Are_you_sure_you_perform_this_operation?'|trans({},'transaction') }}"  header="{{ 'Register_transaction'|trans({},'transaction') }}" >

        <div class="control-group">

            {{ form_label(form.CreditDebit[0]) }}

            <div class="controls money">
                <div class="controls">
                    {{ form_widget(form.CreditDebit[0])  }}
                </div>
                 <span class="icon-certificate"></span>
            </div>

        </div>

           <div class="control-group">

               {{ form_label(form.CreditDebit[1]) }}

               <div class="controls money">
                   <div class="controls">
                       {{ form_widget(form.CreditDebit[1])  }}
                   </div>
                   <span class="icon-certificate"></span>
               </div>

           </div>


        <div class="control-group">

            {{ form_label(form.Amount) }}


                <div class="controls money">
                    {{ form_widget(form.Amount,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )' } })  }} | {{ Account.accCurrency }}  <span class="icon-certificate"></span>
                </div>


        </div>



        <div class="control-group datepicker2">

            {{ form_label(form.TradeDate) }}


            <div class="controls money">
                {{ form_widget(form.TradeDate)  }}  <span class="icon-certificate"></span>
            </div>


        </div>



        <div class="control-group">

            {{ form_label(form.Description) }}

            <div class="controls money">
                {{ form_widget(form.Description)  }}  <span class="icon-certificate"></span>
            </div>

        </div>



        <div class="control-group">

            {{ form_label(form.Fees) }}

            <div class="controls money" >{{ form_widget(form.Fees,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} })  }} | {{ Account.accCurrency }}</div>

        </div>



        <div class="form-actions" style="margin-bottom: 0" >
            <button class="btn btn-primary" type="submit">{{ 'Register' | trans ({}, "common") }}</button>
            <a href="javascript:history.go(-1)" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>

        </div>
    </form>
{% endblock %}