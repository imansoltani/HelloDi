{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '1' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">Distributor</a>
    <span class="link">Sales</span>
{% endblock Site_Map %}


{% block Tab %}



                <div class="tablediv">

                    <div class="contenttitle">
                        <h4>History</h4>
                    </div>
                    <form>
                        <div class="tab-content">
                            <table style="margin-top: 20px"
                                   class="table table-bordered table-striped table-highlight postsend">
                                <thead>
                                <tr>
                                    <th>id</th>
                                    <th>{{ 'Date' | trans ({}, "account") }}</th>
                                    <th>{{ 'ItemName' | trans ({}, "account") }}</th>
                                    <th>{{ 'Buying price' | trans ({}, "account") }}</th>
                                    <th>{{ 'Selling price' | trans ({}, "account") }}</th>
                                    <th>{{ 'Account' | trans ({}, "account") }}</th>
                                    <th>{{ 'User' | trans ({}, "account") }}</th>
                                    <th>{{ 'Code' | trans ({}, "account") }} </th>

                                </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>{{ tran.id}}</td>
                                        <td>{{ tran.tranDate|date('y-M-d H:m:s') }}</td>
                                        <td>{{ tran.Code.Item.itemName}}</td>
                                        <td>

                                            {% for p in tran.Account.Parent.Prices %}

                                                {% if
                                                p.Item==tran.Code.Item
                                                    and
                                                p.Account==tran.Account.Parent
                                                %}
                                                    {{ p.price }}
                                            {% endif %}
                                            {% endfor %}

                                        </td>
                                        <td>{{ -tran.tranAmount }}</td>
                                        <td>{{ tran.Account.accName }}</td>
                                        <td>{{ tran.User.username }}</td>
                                        <td> {{ tran.Code.id }} </td>


                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>

{% endblock %}
