{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">Provider</a>
    <span class="link">Make a Transfer</span>
{% endblock Site_Map %}



{% block Tab %}
    <div class="widget-header">
        <h3>Make a Transfer</h3>
    </div> <!-- /widget-header -->

    {% if form.Accounts|length >0 %}
    <form action="{{ path('ProvTransfer',{'id':Account.id}) }}" method="post" class="form-horizontal" >
        <div class="control-group">

            {{ form_label(form.Amount) }}

            {{ form_widget(form.Amount,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} })  }}|{{ Account.accCurrency }}

        </div>
<hr>
        Transfer to:<br>

        {% for Acc in form.Accounts %}
            <div class="control-group">
                {{ form_label(Acc ) }}
                <div class="controls">
                    {{ form_widget(Acc)  }}
                </div>
            </div>
        {% endfor %}
<hr>
        <div class="control-group">

            {{ form_label(form.Description) }}

            <div class="controls">
                {{ form_widget(form.Description)  }}
            </div>

        </div>

        <div class="control-group">

            {{ form_label(form.Communications) }}

            <div class="controls">
                {{ form_widget(form.Communications)  }}
            </div>

        </div>


        <div class="form-actions" style="margin-bottom: 0" >

            <button class="btn btn-primary"


                    type="submit">Transfer</button>
            <a class="btn" href="{{ path('MasterProvTransaction',{'id':Account.id}) }}">Cancel</a>
        </div>
    </form>
        {% else %}
            <h3>

                This Entity have not dist account !

            </h3>
    {% endif %}
{% endblock %}