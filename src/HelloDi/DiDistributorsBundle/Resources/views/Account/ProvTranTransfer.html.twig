{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '2' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Providers' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('MasterProvTransaction',{'id':Account.id}) }}">{{ 'Transactions' | trans ({}, "transaction") }}</a>
    <span class="link">
        {{ 'MakeTransfer' | trans ({}, "transaction") }}
    </span>
{% endblock Site_Map %}



{% block Tab %}
    <div class="widget-header">
        <h3> {{ 'MakeTransfer' | trans ({}, "transaction") }}</h3>
    </div> <!-- /widget-header -->

    {% if CountProv >0 %}

    <form action="{{ path('ProvTransfer',{'id':Account.id}) }}" method="post" class="form-horizontal aadtr YesNoMessage" header="{{ 'Make_transfer'|trans({},'transaction') }}" message="{{ 'Are_you_sure_you_perform_this_operation?'|trans({},'transaction') }}" >
        <div class="control-group">

            {{ form_label(form.Amount) }}

            <div class="controls money">
                {{ form_widget(form.Amount,{ 'attr' : {'onkeydown' : 'return ( event.ctrlKey || event.altKey
						|| (47<event.keyCode && event.keyCode<58 && event.shiftKey==false)
						|| (95<event.keyCode && event.keyCode<106)
						|| (event.keyCode==8) || (event.keyCode==9)
						|| (event.keyCode>34 && event.keyCode<40)
						|| (event.keyCode==46) )'} })  }} | {{ Account.accCurrency }} <span class="icon-certificate"></span>
            </div>

        </div>
<hr>
        <div class="control-group">
            <label class="control-label">
                {{ 'TransferTo' | trans ({}, "transaction") }}:
            </label>
        </div>


            <div class="control-group">
                {{ form_label(form.Accounts) }}
                <div class="controls money">
                    {{ form_widget(form.Accounts)  }} <span class="icon-certificate"></span>
                </div>
            </div>

<hr>
        <div class="control-group">

            {{ form_label(form.Description) }}

            <div class="controls money">
                <div class="controls">
                    {{ form_widget(form.Description)  }}
                </div>
                <span class="icon-certificate"></span>
            </div>

        </div>

        <div class="control-group">

            {{ form_label(form.Communications) }}

            <div class="controls money">
                <div class="controls">
                    {{ form_widget(form.Communications)  }}
                </div>
                <span class="icon-certificate"></span>
            </div>

        </div>


        <div class="form-actions" style="margin-bottom: 0" >

            <button class="btn btn-primary"   type="submit">{{ 'Transfer' | trans ({}, "common") }}</button>
            <a href="{{ path('MasterProvTransaction',{'id':Account.id}) }}" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>
        </div>
    </form>
        {% else %}
            <h3>
                {{ 'This_Entity_have_not_dist_account' | trans ({}, "accounts") }}


            </h3>
    {% endif %}




{% endblock %}