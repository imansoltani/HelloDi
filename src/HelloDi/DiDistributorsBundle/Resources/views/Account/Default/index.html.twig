    <form action="
        {% if is_granted('ROLE_RETAILER_ADMIN') %}
        {{ path('retailer_transactions_new') }}
        {% else %}
        {{ path('distributor_transactions_new') }}
        {% endif %}
        " method="post">

        <h1>Epayment New</h1>

        <div class="login-fields">


            <div class="field Peyment">
                {{ form_label(form.paymentAmount) }}
