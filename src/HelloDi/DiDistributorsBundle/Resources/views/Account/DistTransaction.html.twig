{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '3' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">{{ 'Distributors' | trans ({}, "accounts") }}</a>
    <span class="link">{{ 'Transactions' | trans ({}, "transaction") }}</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="widget-header">
        <h3>
            {{ 'Transactions' | trans ({}, "transaction") }}

        </h3>
    </div> <!-- /widget-header -->
<br>
    <a class="btn-large button btn btn-primary " href="{{ path('MasterDistFunding',{'id':Account.id}) }}">
        {{ 'FundDistributor' | trans ({}, "accounts") }}

    </a>

    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search">

                                Filter List</p>
                        </span>
        </h5>

        <form class="form-horizontal SearchForm" action="{{ path('MasterDistTransaction',{'id':Account.id}) }}" method="POST" >


            <div class="control-group">
                <label class="control-label" >
                    {{ 'TradeDate' | trans ({}, "transaction") }}

                </label>
                <div class="controls">
                    {{ form_widget(form.TypeDate[0],{'attr':{'checked':'checked'}}) }}
                </div>
            </div>


            <div class="control-group">
                <label class="control-label" >
                    {{ 'LookingDate' | trans ({}, "transaction") }}
                </label>

                    <div class="controls">

                        {{ form_widget(form.TypeDate[1]) }}
                    </div>

            </div>

            <div class="control-group datepicker1"">
            {{ form_label(form.DateStart) }}


                {{ form_widget(form.DateStart) }}

    </div>

    <div class="control-group datepicker2">
        {{ form_label(form.DateEnd) }}

            {{ form_widget(form.DateEnd) }}

    </div>

    <div class="control-group "">
                {{ form_label(form.Type) }}

                    <div class="controls">
                        {{ form_widget(form.Type) }}
                        </div>

            </div>
    <div class="control-group "">
    {{ form_label(form.Action) }}

    <div class="controls">
        {{ form_widget(form.Action) }}
        </div>

    </div>


            <input type="hidden" value="1" name="page" id="search_page" >

            <hr>
            <input class="btn btn-primary" type="submit" value="{{'Search' | trans ({}, "common")}}">

        </form>
        <script type="text/javascript">



            $("#form_Type").change(function(){
                val= $("#form_Type").val();
                $("#form_Action").html('<option value="All"> {{'Pleasewait' | trans ({}, "common")}}</option>');
                $.post('{{ path("LoadActionDist") }}',{id: val},function(result){
                    $("#form_Action").html(result);
                })
            });


            $(function () {

                Form_Search(1,"Search Transactions");

                    val= $("#form_Type").val();
                    $("#form_Action").html('<option value="All"> {{'Pleasewait' | trans ({}, "common")}}</option>');
                    $.post('{{ path("LoadActionDist") }}',{id: val},function(result){
                        $("#form_Action").html(result);
                    });




            });
        </script>
    </div>

    <div class="tablediv">

        <div class="contenttitle">
            <h4> {{'History' | trans ({}, "transaction")}}</h4>
        </div>
        <form>
            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>
                        <th>{{ 'Date' | trans ({}, "transaction") }}</th>
                        <th>{{ 'Description' | trans ({}, "transaction") }}</th>
                        <th>{{ 'Credit' | trans ({}, "transaction") }}</th>
                        <th>{{ 'Debit' | trans ({}, "transaction") }}</th>
                        <th>{{ 'Balance' | trans ({}, "accounts") }}</th>
                        <th>{{ 'Operation' | trans ({}, "common") }}</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for tran in pagination %}
                        <tr>
                            <td>


                                {% if datetype==0 %}
                                    {{ tran.tranDate|date('y-M-d') }}
                                {% else %}
                                    {{ tran.tranInsert|date('y-M-d H:m:s') }}
                                {% endif %}

                            </td>

                            <td>{{ tran.tranDescription}}
                            {% if tran.tranAction=='sale'%}
                            |{{ tran.id }}
                            {% endif %}
                            </td>



                            {% if tran.tranAmount>=0 %}
                                <td>{{ tran.tranAmount }}</td>
                                <td>------</td>
                            {% else %}
                                <td>------</td>
                                <td>{{ -tran.tranAmount }}</td>
                            {% endif %}

                            <td>             {% set balance=tran.tranBalance+tran.tranAmount %}


                                {{ balance }}</td>
                            <td class="td-actions">

                            <a class="btn_actions showDetails">
                                {{ 'Details' | trans ({}, "common") }}

                                <span>

                                        <fieldset>
                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Id' | trans ({}, "common") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text" value="{{ tran.id}}" disabled="" >
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'DateInsert' | trans ({}, "transaction") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text" value="{{ tran.tranInsert|date('y-M-d H:m:s') }}" disabled="" >
                                                </div>
                                            </div>



                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Account' | trans ({}, "accounts") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text" value="{{ tran.Account.accName }}" disabled="" >
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Credit' | trans ({}, "transaction") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text"


                                                            {% if tran.tranAmount > 0 %}
                                                                value="{{ tran.tranAmount }}"
                                                            {% else %}
                                                                value="---------------"
                                                            {% endif %}

                                                           disabled="" >
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Debit' | trans ({}, "transaction") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text"

                                                            {% if tran.tranAmount < 0 %}
                                                                value="{{ -tran.tranAmount }}"
                                                            {% else %}
                                                                value="---------------"
                                                            {% endif %}

                                                           disabled="" >
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Balance' | trans ({}, "accounts") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text" value=" {{ balance }}" disabled="" >
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'User' | trans ({}, "user") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text" value="{{ tran.User.username }}" disabled="" >
                                                </div>
                                            </div>

                                            {% if tran.Code is not null  %}

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Item' | trans ({}, "item") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text" value=" {{ tran.Code.Item.itemName }}" disabled="" >
                                                </div>
                                            </div>

                                            <div class="control-group">
                                                <label class="control-label">
                                                    {{ 'Code' | trans ({}, "code") }}
                                                </label>
                                                <div class="controls">
                                                    <input type="text"

                                                           value="{{ tran.Code.id }}"


                                                     disabled="" >
                                                </div>
                                            </div>

                                            {% endif %}

                                        </fieldset>

                                </span>
                            </a>

                            </td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </form>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>



{% endblock %}


