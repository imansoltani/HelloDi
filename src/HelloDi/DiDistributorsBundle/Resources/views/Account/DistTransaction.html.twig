{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '3' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">Distributor</a>
    <span class="link">Transaction</span>
{% endblock Site_Map %}


{% block Tab %}
    <div class="widget-header">
        <h3>
            Account Transactions
        </h3>
    </div> <!-- /widget-header -->
<br>
    <a class="btn-large button btn btn-primary " href="{{ path('MasterDistFunding',{'id':Account.id}) }}">
        Fund Distributors
    </a>

    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search">Filter List</p>
                        </span>
        </h5>

        <form class="form-horizontal SearchForm" action="{{ path('MasterDistTransaction',{'id':Account.id}) }}" method="POST" >


            <div class="control-group">
                <label class="control-label" >Trade Date
                </label>
                <div class="controls">
                    {{ form_widget(form.TypeDate[0],{'attr':{'checked':'checked'}}) }}
                </div>
            </div>


            <div class="control-group">
                <label class="control-label" >Looking Date
                </label>

                    <div class="controls">
                        {{ form_widget(form.TypeDate[1]) }}
                    </div>

            </div>
            <div class="control-group datepicker1"">
            {{ form_label(form.DateStart) }}


                {{ form_widget(form.DateStart) }}

    </div>

    <div class="control-group datepicker2">
        {{ form_label(form.DateEnd) }}

            {{ form_widget(form.DateEnd) }}

    </div>

    <div class="control-group "">
                {{ form_label(form.Type) }}

                    <div class="controls">
                        {{ form_widget(form.Type) }}
                        </div>

            </div>
    <div class="control-group "">
    {{ form_label(form.Action) }}

    <div class="controls">
        {{ form_widget(form.Action) }}
        </div>

    </div>


            <input type="hidden" value="1" name="page" id="search_page" >

            <hr>
            <input class="btn btn-primary" type="submit" value="Search">

        </form>
        <script type="text/javascript">



            $("#form_Type").change(function(){
                val= $("#form_Type").val();
                $("#form_Action").html('<option value="All">Please wait ...</option>');
                $.post('{{ path("LoadActionDist") }}',{id: val},function(result){
                    $("#form_Action").html(result);
                })
            });


            $(function () {

                Form_Search(1,"Search Transactions");

                    val= $("#form_Type").val();
                    $("#form_Action").html('<option value="All">Please wait ...</option>');
                    $.post('{{ path("LoadActionDist") }}',{id: val},function(result){
                        $("#form_Action").html(result);
                    });




            });
        </script>
    </div>

    <div class="tablediv">

        <div class="contenttitle">
            <h4>History</h4>
        </div>
        <form>
            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>
                        <th>{{ 'Date' | trans ({}, "account") }}</th>
                        <th>{{ 'Description' | trans ({}, "account") }}</th>
                        <th>{{ 'Credit' | trans ({}, "account") }}</th>
                        <th>{{ 'Debit' | trans ({}, "account") }}</th>
                        <th>{{ 'Balance' | trans ({}, "account") }}</th>
                        <th>{{ 'Manage' | trans ({}, "account") }}</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for tran in pagination %}
                        <tr>
                            <td>


                                {% if datetype==0 %}
                                    {{ tran.tranDate|date('y-M-d') }}
                                {% else %}
                                    {{ tran.tranInsert|date('y-M-d H:m:s') }}
                                {% endif %}

                            </td>

                            <td>{{ tran.tranDescription}}
                            {% if tran.tranAction=='sale'%}
                            |{{ tran.id }}
                            {% endif %}
                            </td>



                            {% if tran.tranAmount>=0 %}
                                <td>{{ tran.tranAmount }}</td>
                                <td>------</td>
                            {% else %}
                                <td>------</td>
                                <td>{{ -tran.tranAmount }}</td>
                            {% endif %}

                            <td>             {% set balance=tran.tranBalance+tran.tranAmount %}


                                {{ balance }}</td>
                            <td class="td-actions">

                            <a class="btn_actions showDetails">
                                Details
                                <span >

                                </span>
                            </a>

                            </td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </form>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>



{% endblock %}


