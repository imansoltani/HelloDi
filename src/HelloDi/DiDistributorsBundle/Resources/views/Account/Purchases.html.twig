{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '7' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">Distributor</a>
    <span class="link">Purchases</span>
{% endblock Site_Map %}

{% block Tab %}

<div class="widget-header">
    <h3>Distributor Purchases</h3>
</div> <!-- /widget-header -->

    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search"></p>
                        </span>
        </h5>
        <form class="form-horizontal SearchForm" action="{{ path('MasterDistPurchases',{'id':Account.id}) }}" method="POST"
        <fieldset>

            <div class="control-group datepicker1">
                {{ form_label(form.DateStart) }}

                    {{ form_widget(form.DateStart) }}

            </div>
            <div class="control-group datepicker2">
                {{ form_label(form.DateEnd) }}

                    {{ form_widget(form.DateEnd) }}

            </div>



            <div class="control-group">
                {{ form_label(form.ItemName) }}
                <div class="controls">
                    {{ form_widget(form.ItemName) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_label(form.ItemType) }}
                <div class="controls">
                    {{ form_widget(form.ItemType) }}
                </div>
            </div>


            <input type="hidden" value="1" name="page" id="search_page" >
                <hr>
                <input class="btn btn-primary" type="submit" value="Search">

            </fieldset>

        </form>
        <script type="text/javascript">
            $(function () {

                Form_Search(0,"Search Purchases");

            });
        </script>
    </div>

    <div class="tablediv">
        <div class="contenttitle">
            <h4>
                <a class="btn btn-info" href="#">Print To PDF</a>
            </h4>
        </div>
        <form>
            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>


                        <th>{{ 'Item' | trans ({}, "account") }}</th>
                        <th>{{ 'Quantity' | trans ({}, "account") }}</th>
                        <th>{{ 'Buying Price' | trans ({}, "account") }}</th>
                        <th>{{ 'Vat' | trans ({}, "account") }}</th>

                    </tr>
                    </thead>
                    <tbody>



                    {% for Tr in pagination %}

                        <tr>

                            <td>{{ Tr.Code.Item.itemName}}</td>
                            <td>-----</td>
                            <td>

                                {% for p in Tr.Account.Parent.Prices %}

                                    {% if
                                    p.Item==Tr.Code.Item
                                    and
                                    p.Account==Tr.Account.Parent
                                    %}
                                        {{ p.price }}
                                    {% endif %}
                                {% endfor %}

                            </td>
                            <td>Task</td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                {#{button pagination}#}
            </div>
        </form>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}