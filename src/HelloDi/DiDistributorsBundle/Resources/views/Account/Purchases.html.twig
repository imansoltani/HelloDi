{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '7' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">{{ 'Distributors' | trans ({}, "accounts") }}</a>
    <span class="link">{{ 'Purchases' | trans ({}, "transaction") }}</span>
{% endblock Site_Map %}

{% block Tab %}

<div class="widget-header">

    <h3>{{ 'Purchases' | trans ({}, "transaction") }}</h3>
</div> <!-- /widget-header -->

    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search"></p>
                        </span>
        </h5>
        <form class="form-horizontal SearchForm" action="{{ path('MasterDistPurchases',{'id':Account.id}) }}" method="POST" id="searchpurchases">
        <fieldset>

            <div class="control-group datepicker1">
                {{ form_label(form.DateStart) }}

                    {{ form_widget(form.DateStart) }}

            </div>
            <div class="control-group datepicker2">
                {{ form_label(form.DateEnd) }}

                    {{ form_widget(form.DateEnd) }}

            </div>



            <div class="control-group">
                {{ form_label(form.ItemName) }}
                <div class="controls">
                    {{ form_widget(form.ItemName) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_label(form.ItemType) }}
                <div class="controls">
                    {{ form_widget(form.ItemType) }}
                </div>
            </div>

            <input type="hidden" name="print" value="0" id="printhidden">

            <input type="hidden" value="1" name="page" id="search_page" >
                <hr>
                <input class="btn btn-primary" type="submit" value="{{'Search' | trans ({}, "common")}}" onclick="$('#printhidden').val('0');">

            </fieldset>

        </form>
        <script type="text/javascript">
            $(function () {

                Form_Search(1,"{{'Filter_List'|trans({},'js')  }}");

            });
        </script>
    </div>

    <div class="tablediv">
        <div class="contenttitle">
            <h4>
                <input class="btn btn-info" type="button" value="{{'PrintToPDF' | trans ({}, "accounts")}}" onclick="$('#printhidden').val('1');$('#searchpurchases').submit();" >
            </h4>
        </div>
        <form>
            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>


                        <th>{{ 'Item' | trans ({}, "itam") }}</th>
                        <th>{{ 'Quantity' | trans ({}, "transaction") }}</th>
                        <th>{{ 'BuyingPrice' | trans ({}, "price") }}</th>
                        <th>{{ 'Vat' | trans ({}, "vat") }}</th>

                    </tr>
                    </thead>
                    <tbody>


                    {% for Tr in pagination %}

                        <tr>

                            <td>{{ Tr.TR.Code.Item}}</td>
                            <td>{{ Tr.Quantity }}</td>

                            <td>

                             {{ Tr.TR.BuyingPrice }}

                            </td>
                            <td>

                                {% set vat=Tr.TR.TaxHistory.vat %}{% set x=Tr.TR.BuyingPrice|abs %}
                                <span id='vat'>{{ ((x/100+vat)*vat) }}</span>

                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                {#{button pagination}#}
            </div>
        </form>
    </div>

{% endblock %}