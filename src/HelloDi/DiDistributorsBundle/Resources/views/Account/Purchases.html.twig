{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowDistMaster.html.twig' %}

{% set tab = '7' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <a class="link" href="{{ path('ShowMyAccountDist') }}">Distributor</a>
    <a class="link" href="#">Manage</a>
    <span class="link">Purchases</span>
{% endblock Site_Map %}

{% block Tab %}

<div class="widget-header">
    <h3>Distributor Purchases</h3>
</div> <!-- /widget-header -->

    <div class="form_search">
        <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search"></i>
                            <p class="title_search">Search Purchases</p>
                        </span>
        </h5>
        <form class="form-horizontal SearchForm" action="{{ path('MasterDistPurchases',{'id':Account.id}) }}" method="POST"
        <fieldset>

            <div class="control-group">
                {{ form_label(form.DateStart) }}
                <div class="controls">
                    {{ form_widget(form.DateStart) }}
                </div>
            </div>
            <div class="control-group">
                {{ form_label(form.DateEnd) }}
                <div class="controls">
                    {{ form_widget(form.DateEnd) }}
                </div>
            </div>

            <div class="control-group">
                {{ form_label(form.ItemType) }}
                <div class="controls">
                    {{ form_widget(form.ItemType) }}
                </div>
            </div>


            <div class="control-group">
                {{ form_label(form.ItemName) }}
                <div class="controls">
                    {{ form_widget(form.ItemName) }}
                </div>
            </div>

                <hr>
                <input class="btn btn-primary" type="submit" value="Search">

            </fieldset>

        </form>
        <script type="text/javascript">
            $(function () {
                $(".SearchForm").hide();
                $('.TitleShow1').click(function () {
                    $('.SearchForm').slideToggle();
                    $('#search_logo').removeAttr('class');

                    if ($('.title_search').html() == 'Search Purchases') {
                        $('.title_search').html('Close Search');
                        $('#search_logo').attr('class', 'icon-remove');
                    }
                    else {
                        $('.title_search').html('Search Purchases');
                        $('#search_logo').attr('class', 'icon-search');
                    }

                    var x = $('.form_search').offset().top - 20;
                    $('body,html').animate({
                        scrollTop: x
                    }, 800);
                });

            });
        </script>
    </div>

    <div class="tablediv">
        <div class="contenttitle">
            <h4>
                <a class="btn btn-info" href="#">Print To PDF</a>
            </h4>
        </div>
        <form>
            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>
                        <th>id</th>
                        <th>Date</th>
                        <th>{{ 'Transaction.Item' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Quantity' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Buying Price' | trans ({}, "account") }}</th>
                        <th>{{ 'Transaction.Vat' | trans ({}, "account") }}</th>

                    </tr>
                    </thead>
                    <tbody>

                    {% for Tr in pagination %}
                        <tr>
                            <td>{{Tr.id }}</td>
                            <td>{{Tr.tranDate|date }}</td>
                            <td>{{ Tr.Code.Item.itemName}}</td>
                            <td>{{ Tr|length }}</td>
                            <td>

                                {% set Item=Tr.Code.Item %}
                                {% set Account=Tr.Account.Parent %}

                                {% for Acc in Account.Prices %}
                                    {% for Itm in Item.Prices %}
                                        {% if Acc.id==Itm.id  %}
                                            {{ Acc.price  }}
                                        {% endif %}
                                    {% endfor %}
                                {% endfor %}


                            </td>
                            <td>Task</td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
                {#{button pagination}#}
            </div>
        </form>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}