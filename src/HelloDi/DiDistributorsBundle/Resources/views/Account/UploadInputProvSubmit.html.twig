{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowProv1.html.twig' %}

{% set tab = '3' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('ShowMyAccountProv') }}">{{ 'Provider' | trans ({}, "accounts") }}</a>
    <a class="link" href="{{ path('ManageItemsProv',{id:Account.id}) }}">{{ 'Items' | trans ({}, "item") }}</a>
    <span class="link">{{ 'Upload' | trans ({}, "code") }}</span>
{% endblock Site_Map %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'Upload' | trans ({}, "code") }}</h3>
    </div>


    <form action="{{ path('UploadInputProvSubmitAccepted',{'id':Account.id,'itemid':input.item.id}) }}" method="post"  class="form-horizontal">

        <div class="control-group">
            <label class="control-label">
                {{ 'Name' | trans ({}, "item") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ input.item.itemName }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">
                {{ 'FaceValue' | trans ({}, "item") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ input.item.itemFaceValue }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">
                {{ 'Quantity' | trans ({}, "code") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ count }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">
                {{ 'Batch' | trans ({}, "code") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ input.batch }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">
                {{ 'DateProduction' | trans ({}, "code") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ input.dateProduction|date('Y/m/d') }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">
                {{ 'DateExpiry' | trans ({}, "code") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ input.dateExpiry|date('Y/m/d') }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">
                {{ 'FileName' | trans ({}, "code") }}
            </label>
            <div class="controls">
                <input type="text" value="{{ input.fileName }}" class="input-large" disabled="" >
            </div>
        </div>

        <div class="form-actions" style="margin-bottom: 0">
            <input type="submit" class="btn btn-primary" value="{{ 'Accept' | trans ({}, "common") }}"/>
            <a href="{{ path('UploadInputProvSubmitCanceled',{'id':Account.id,'itemid':input.item.id}) }}" class="btn btn-warning">{{ 'Cancel' | trans ({}, "common") }}</a>
        </div>


        </form>


{% endblock %}