{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    {{ 'Provider' | trans ({}, "accounts") }}

{% endblock title %}

{% set MU = 'prov' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <span class="link">{{ 'Providers' | trans ({}, "accounts") }}</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-th-large"></i>
    {{ 'Providers' | trans ({}, "accounts") }}

{% endblock %}


{% block Link_Head %}

    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/jquery.dataTables.nightly.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/DataTable/ColReorder.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/DataTable/ColVis.js') }}"></script>


    <script type="text/javascript">

        $(document).ready(function() {
            Fix_Size();
        } );

    </script>

{% endblock %}


{% block Body %}

    <div class="span">
        <div class="widget stacked ">
            <div class="widget-content">


                <a class="button btn btn-primary btn-large" href="{{ path('AddAccountProveMaster2Step') }}">
                    {{ 'CreateProviderWithEntity' | trans ({}, "accounts") }}
                </a>


                <div style="margin-top: 5px" class="tablediv">

                    <form method="post">
                        <div class="tab-content datatable">
                            <table id="example" class="table postsend">
                                <thead>

                                <tr>

                                    <th>{{ 'Id' | trans ({}, "common") }}</th>
                                    <th>{{ 'Name' | trans ({}, "common") }}</th>
                                    <th>{{ 'Balance' | trans ({}, "accounts") }}</th>
                                    <th>{{ 'Entity' | trans ({}, "entity") }}</th>
                                    <th>{{ 'Operation' | trans ({}, "common") }}</th>

                                </tr>


                                <tr class="input" >
                                    <td><input type="text" name="search_Id" value="Search Id" class="search_init" /></td>
                                    <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                                    <td><input type="text" name="search_Name" value="Search Name" class="search_init" /></td>
                                    <td><input type="text" name="search_Balance" value="Search Balance" class="search_init" /></td>
                                    <td><input type="text" name="search_Entity_Name" value="Search Entity Name" class="search_init" /></td>
                                </tr>

                                </thead>

                                <tbody>
                                {% for myAccount in pagination %}
                                    <tr>
                                        <td style="font-weight: bold">{{ myAccount.id }}</td>

                                        <td>{{ myAccount.accName }}</td>
                                        <td>{{ myAccount.accBalance }}|{{ myAccount.accCurrency }}</td>
                                        <td>{{ myAccount.entiti.entName }}</td>
                                        <td class="td-actions">

                                            <a class="btn_actions"
                                               href="{{ path('MasterProvTransaction',{'id':myAccount.id}) }}">{{ 'Manage' | trans ({}, "common") }}</a>
                                        </td>
                                    </tr>
                                {% endfor %}

                                </tbody>

                            </table>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
{% endblock %}


{% block Link_Footer %}

{% endblock %}
