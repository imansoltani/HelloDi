{% extends 'HelloDiDiDistributorsBundle:Tabs:ShowItemMaster.html.twig' %}

{% set tab = '2' %}

{% block title %}
    {{ 'Items' | trans ({}, "item") }}
{% endblock title %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('item') }}">{{ 'Items' | trans ({}, "item") }}</a>
    <span class="link">{{ 'Descriptions' | trans ({}, "item") }}</span>
{% endblock Site_Map %}

{% set MU = 'item' %}

{% block Tab %}
    <div class="widget-header">
        <h3>{{ 'Descriptions' | trans ({}, "item") }}</h3>
    </div> <!-- /widget-header -->
    <br>
    <a class=" btn btn-primary btn-large" href="{{ path('item_desc_new',{'id':item.id}) }}">
        {{ 'AddItemDescription' | trans ({}, "item") }}
    </a>
    <div style="margin-top: 35px" class="tablediv">

        <div class="contenttitle">
            <h4>{{ 'Descriptions' | trans ({}, "item") }}</h4>
        </div>


            <div class="tab-content">
                <table style="margin-top: 20px"
                       class="table table-bordered table-striped table-highlight postsend">
                    <thead>
                    <tr>
                        <th>{{ 'Id' | trans ({}, "item") }}</th>
                        <th>{{ 'Operation' | trans ({}, "common") }}</th>
                        <th>{{ 'Language' | trans ({}, "item") }}</th>
                        <th style="width:7.2cm !important;">{{ 'Sample' | trans ({}, "item") }} ({{ 'Pin' | trans ({}, "code") }}:1234, {{ 'SerialNumber' | trans ({}, "item") }}:4321, {{ 'DateExpiry' | trans ({}, "item") }}:2012/12/12)</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for itemdesc in itemdescs %}
                        <tr>

                            <td >{{ itemdesc.id }}</td>
                            <td class="td-actions" >
                                <a class="btn_actions" href="{{ path('item_desc_edit',{'id':item.id,'descid':itemdesc.id}) }}">{{ 'Edit' | trans ({}, "common") }}</a><br/>
                                <a class="btn_actions" href="">Print Sample</a>
                            </td>
                            <td>{{ itemdesc.desclang }}</td>
                            <td class="td-actions" >
                                {{ include(template_from_string(itemdesc.descdesc),{
                                    "pin":1234,
                                    "serial":4321,
                                    "expire":"2012/12/12",
                                    "printdate":"2013/13/13",
                                    "duplicate":"duplicate",
                                    "entityname":'Entity Name',
                                    "operator":'Operator Name',
                                    "entityadrs1":'Address Line 1',
                                    "entityadrs2":'Address Line 2',
                                    "entityadrs3":'Address Line 3'
                                }) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
    </div>

{% endblock %}



