{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    Items
{% endblock title %}

{% set MU = 'item' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <span class="link">Item</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-tags"></i>
    Items Management
{% endblock %}

{% block Link_Head %}

    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/jquery.dataTables.nightly.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/DataTable/ColReorder.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/hellodi/js/libs/DataTable/ColVis.js') }}"></script>


    <script type="text/javascript">

        $(document).ready(function() {
            Fix_Size();
        } );

    </script>

{% endblock %}

{% block Body %}
    <div class="span">
    <div class="widget stacked">

        <!-- /widget-header -->

        <div class="widget-content">
            <a class=" btn btn-primary btn-large" href="{{ path('item_new') }}">
                Add a new Item
            </a>


            <div style="margin-top: 5px" class="tablediv">

                    <div class="tab-content datatable">
                        <table id="example" class="table postsend">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Manage</th>
                                <th>Name</th>
                                <th>Face Value (Currency)</th>
                                <th>Code</th>
                                <th>Type</th>
                                <th>Min Stock</th>
                                <th>Stock</th>
                                <th>Country</th>
                            </tr>

                            <tr class="input" >
                                <td><input type="text" name="search_Id" value="Search Id" class="search_init" /></td>
                                <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                                <td><input type="text" name="search_Name" value="Search Name" class="search_init" /></td>
                                <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                                <td><input type="text" name="search_Code" value="Search Code" class="search_init" /></td>
                                <td><input type="text" name="search_Type" value="Search Type" class="search_init" /></td>
                                <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                                <td><input type="text" disabled="" name="search_Operation" value="" class="search_init" /></td>
                                <td><input type="text" name="search_Country" value="Search Country" class="search_init" /></td>
                            </tr>

                            </thead>
                            <tbody>
                            {% for item in items %}
                                <tr>

                                    <td >{{ item.id }}</td>
                                    <td class="td-actions" >
                                        <a class="btn_actions" href="{{ path('item_show',{'id':item.id}) }}">Manage</a>
                                    </td>
                                    <td>{{ item.itemName }}</td>
                                    <td>{{ item.itemFaceValue }} {{ item.itemCurrency }}</td>
                                    <td>{{ item.itemCode }}</td>
                                    <td>{% if item.itemType==0 %}Mobile{% elseif item.itemType==1 %}Internet{% else %}Tel{% endif %}</td>
                                    <td>{{ item.alertMinStock }}</td>
                                    <td>{{ item.Codes.count }}</td>
                                    <td>{{ item.Country.iso }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
            </div>




        </div>
    </div>
</div>
{% endblock %}