{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    Items
{% endblock title %}

{% set MU = 'item' %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">Home</a>
    <span class="link">Item</span>
{% endblock Site_Map %}

{% block PageTitle %}
    <i class="icon-book"></i>
    Items
{% endblock %}

{% block Body %}
    <div class="span">
    <div class="widget stacked">

        <!-- /widget-header -->

        <div class="widget-content">
            <a class="button btn btn-warning btn-large" href="{{ path('item_new') }}">
                Create a new Item
            </a>
            <div class="form_search" >
                <h5 style="cursor:pointer;" class="TitleShow1">
                        <span>
                            <i id="search_logo" class="icon-search" ></i>
                            <p class="title_search" >Search Item</p>
                        </span>
                </h5>
                <form class="form-horizontal SearchForm" action="#"  method="post" {{ form_enctype(form) }}>

                    <div class="control-group">
                        {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}

                    </div>

                    <div class="control-group">
                        {{ form_label(form.type) }}
                        <div class="controls">
                            {{ form_widget(form.type) }}
                        </div>
                    </div>

                    <div class="control-group">
                        {{ form_label(form.operator) }}

                            {{ form_widget(form.operator) }}

                    </div>

                    <div class="control-group">
                        {{ form_label(form.currency) }}
                        <div class="controls">
                            {{ form_widget(form.currency) }}
                        </div>
                    </div>



                    <hr>
                    <input class="btn btn-large btn-primary" type="submit" value="Search">
                </form>
                <script type="text/javascript">
                    $(function () {
                        $(".SearchForm").hide();
                        $('.TitleShow1').click(function () {
                            $('.SearchForm').slideToggle();
                            $('#search_logo').removeAttr('class') ;

                            if($('.title_search').html() == 'Search Provider')
                            {
                                $('.title_search').html('Close Search') ;
                                $('#search_logo').attr('class','icon-remove') ;
                            }
                            else{
                                $('.title_search').html('Search Provider') ;
                                $('#search_logo').attr('class','icon-search') ;
                            }

                            var x = $('.form_search').offset().top - 20;
                            $('body,html').animate({
                                scrollTop: x
                            }, 800);
                        });

                    });
                </script>
            </div>

            <div class="tablediv">
                <div class="contenttitle">
                    <h4>Items</h4>
                </div>
                <div class="tab-content">
                    <table style="margin-top: 20px" class="table postsend">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Manage</th>
                        <th>Name</th>
                        <th>Face Value (Currency)</th>
                        <th>Code</th>
                        <th>Type</th>
                        <th>Min Stock</th>
                        <th>Stock</th>
                        <th>Operator</th>
                        <th>Country</th>


                    </tr>
                    </thead>
                    <tbody>
                    {% for item in pagination %}
                        <tr>

                            <td >{{ item.id }}</td>
                            <td class="td-actions" >
                                <a class="btn_actions" href="{{ path('item_tabs', { 'id': item.id }) }}" class="btn btn-small btn-warning">
                                    Manage
                                </a>
                            </td>
                            <td>{{ item.itemName }}</td>
                            <td>{{ item.itemFaceValue }} {% if item.itemCurrency==0  %}USD {% else %}CHF {% endif %}</td>
                            <td>{{ item.itemCode }}</td>
                            <td>{% if item.itemType==0 %}Mobile{% elseif item.itemType==1 %}Internet{% else %}Tel{% endif %}</td>
                            <td>{{ item.alertMinStock }}</td>
                            <td>{{ item.Codes.count }}</td>
                            <td>{{ item.operator }}</td>
                            <td>{{ item.Country.iso }}</td>


                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>

            </div>
            <div class="navigation" style="text-align: center">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}