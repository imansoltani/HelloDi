{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    {{ 'Operators' | trans ({}, "operator") }}
{% endblock title %}

{% block Site_Map %}
    <a class="link" href="{{ path('loginsuccess') }}">{{ 'Home' | trans ({}, "menu") }}</a>
    <a class="link" href="{{ path('operator') }}">{{ 'Operator' | trans ({}, "operator") }}</a>
    <span class="link">{{ 'AddOperator' | trans ({}, "operator") }}</span>
{% endblock Site_Map %}
{% block Link_Head %}

    <link href="{{ asset('bundles/hellodi/css/smart_wizard.css') }}" rel="stylesheet">
{% endblock %}

{% block PageTitle %}
    <i class="icon-align-justify"></i>
    {{ 'AddOperator' | trans ({}, "operator") }}
{% endblock %}


{% set MU = 'operator' %}

{% block Body %}
    <div class="span">
        <div class="widget stacked">

            <!-- /widget-header -->

            <div class="widget-content">
                <form action="#" method="post" {{ form_enctype(form) }} class="form-horizontal">
                    <div class="control-group">
                        {{ form_label(form.name) }}
                        <div class="controls money">
                            {{ form_widget(form.name) }} <span class="icon-certificate"></span>
                        </div>
                        {{ form_errors(form.name) }}
                    </div>
                    <div class="control-group">
                        {{ form_label(form.file) }}
                        <div class="controls money">
                            {{ form_widget(form.file) }} <span class="icon-certificate"></span>
                        </div>
                        {{ form_errors(form.file) }}
                    </div>

                    {{ form_rest(form) }}
                    <div class="form-actions" style="margin-bottom: 0">
                        <input type="submit" class="btn btn-primary" value="{{ 'Add' | trans ({}, "common") }}"/>
                        <a href="{{ path('operator') }}" class="btn">{{ 'Cancel' | trans ({}, "common") }}</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
{% endblock %}
