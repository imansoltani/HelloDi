{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}



<div class="pagination">



        <span><a
                {% if first is defined and current != first %}
                    class=" btn"
                    onclick="PagingAction({{ first }});"
                {% endif %}
                    class="btn dis">
                <span>{{ 'First' | trans ({}, "pagination") }}</span>
                <i class="icon-step-backward" ></i>
            </a></span>



        <span><a
                    {% if previous is defined %} class=" btn"
                        onclick="PagingAction({{ previous }});"
                    {% endif %}
                    class="btn dis"
            >
                <span>{{ 'Prev' | trans ({}, "pagination") }}</span>
                <i class="icon-backward" ></i>
            </a></span>


    {% for page in pagesInRange %}
            <span>
                <a

                        {% if page != current %}
                            onclick="PagingAction({{ page }});"
                            class="btn"
                        {% else %}
                            class="btn btn-primary current"
                        {% endif %}
                >{{ page }}</a>
            </span>


    {% endfor %}


        <span><a
                    {% if next is defined %}
                        onclick="PagingAction({{ next }});"
                         class="btn"
                    {% endif %}
                    class="btn dis"
              >
                <span>{{ 'Next' | trans ({}, "pagination") }}</span>
                <i class="icon-forward" ></i>
              </a></span>



        <span><a
                    {% if last is defined and current != last %}
                        onclick="PagingAction({{ last }});"
                         class="btn"
                    {% endif %}
                    class="btn dis"
                    >
                <span>{{ 'Last' | trans ({}, "pagination") }}</span>
                <i class="icon-step-forward" ></i>
                    </a></span>

</div>


    <script type="text/javascript" >

        function PagingAction(x)
        {

            $('#search_page').val(x);

            $('.SearchForm').submit();
        }

    </script>

{% endif %}
