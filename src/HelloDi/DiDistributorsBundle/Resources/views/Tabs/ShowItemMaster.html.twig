{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    Manage Item
{% endblock title %}


{% set MU = 'item' %}

{% block PageTitle %}
    <i class="icon-tags"></i>
    {{ item.itemName }}
{% endblock %}

{% set hornav = '38px' %}
{% block Tabs %}

    <li {% if tab == '1' %}class="active"{% endif %}  >
        <a href="{{ path('item_show',{'id':item.id}) }}"  >
            <input type="submit" value="details" >
        </a>
    </li>
    <li {% if tab == '2' %}class="active"{% endif %} >
        <a href="{{ path('item_desc',{'id':item.id}) }}"  >
            <input type="submit" value="description" >
        </a>
    </li>

    <li {% if tab == '3' %}class="active"{% endif %} >
        <a href="{{ path('item_price',{'id':item.id}) }}"  >
            <input type="submit" value="item per distributors" >
        </a>
    </li>


{% endblock Tabs %}


{% block Body %}
    <div class="span">
        <div class="widget stacked">

            <div class="widget-content">


                <div class="tab-content">
                    <div class="tab-pane active" id="Info">
                        {% block Tab %}
                        {% endblock Tab %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock Body %}