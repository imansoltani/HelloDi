{% extends 'HelloDiDiDistributorsBundle:Menu:Master.html.twig' %}

{% block title %}
    Manage Provider
{% endblock title %}


{% set MU = 'prov' %}

{% block PageTitle %}
    <i class="icon-th-large"></i>
    Manage Provider
{% endblock %}

{% block Dist1 %}
    <div class="pagedisc">
        <i>Name :</i><span>{{ Account.accName }}</span><br>
        <i>Balance :</i><span>{{ Account.accBalance }}</span><br>
    </div>
{% endblock %}

{% block Dist2 %}
    <div class="pagedisc">
        <i>Name :</i><span>{{ Account.accName }}</span><br>
        <i>Balance :</i><span>{{ Account.accBalance }}</span><br>
    </div>
{% endblock %}

{% set hornav = '38px' %}
{% block Tabs %}

    <li {% if tab == '2' %}class="active"{% endif %} >
        <a href="{{ path('MasterProvTransaction',{id:Account.id}) }}" >
            <form>
                <input type="submit" value="Transaction"/>
            </form>
        </a>
    </li>
    <li {% if tab == '1' %}class="active"{% endif %}  >
        <a>
            <form id="Item" action="{{ path('ManageItemsProv') }}" method="post">
                <input type="hidden" name="accountid" value="{{ Account.id }}"/>
                <input type="submit" value="Item"/>
            </form>
        </a>
    </li>


    <li {% if tab == '3' %}class="active"{% endif %} >
        <a>
            <form action="{{ path('ManageInputsProv') }}" method="post">
                <input type="hidden" name="accountid" value="{{ Account.id }}"/>
                <input type="submit" value="Input"/>
            </form>
        </a>
    </li>

    <li {% if tab == '6' %}class="active"{% endif %} >
        <a href="{{ path('MasterProvRemoved',{id:Account.id}) }}" >
            <form>
                <input type="submit" value="Removed"/>
            </form>
        </a>
    </li>

    <li {% if tab == '4' %}class="active"{% endif %} >
        <a>
            <form action="{{ path('EditAccountProv') }}" method="post">
                <input type="hidden" name="accountid" value="{{ Account.id }}"/>
                <input type="submit" value="Info"/>
            </form>
        </a>
    </li>

<li {% if tab == '5' %}class="active"{% endif %} >
    <a>
        <form action="{{ path('ManageProvEntiti') }}" method="post">
            <input type="hidden" name="accountid" value="{{ Account.id }}"/>
            <input type="submit" value="Entity"/>
        </form>
    </a>
</li>
{% endblock Tabs %}


{% block Body %}
    <div class="span">
        <div class="widget stacked">

            <div class="widget-content">
                <!--<div class="HeadTitle" >
                    <h1>{{ Account.accName }}</h1>
                    <div><span>Balance:</span><i>11000000000000</i></div>
                    <div><span>Entity Name:</span><i>{{ Account.Entiti.entName }}</i></div>
                </div>-->

                <div class="tab-content">
                    <div class="tab-pane active" id="Info">
                        {% block Tab %}
                        {% endblock Tab %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock Body %}