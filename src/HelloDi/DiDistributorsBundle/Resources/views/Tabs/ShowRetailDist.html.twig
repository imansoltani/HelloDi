{% extends 'HelloDiDiDistributorsBundle:Menu:AdminDist.html.twig' %}

{% block title %}
    {{ 'Retailers' | trans ({}, "accounts") }}
{% endblock title %}


{% set MU = 'retail' %}

{% block PageTitle %}
    <i class="icon-briefcase"></i>
    {{ 'Retailers' | trans ({}, "accounts") }}
{% endblock %}

{% block Dist1 %}
    <div class="pagedisc">
        <i>{{ 'AccountName' | trans ({}, "accounts") }} :</i><span>{{ retailerAccount.accName }}</span><br>
        <i>{{ 'Balance' | trans ({}, "accounts") }} :</i><span>{{ retailerAccount.accBalance }} {{ retailerAccount.accCurrency }}</span><br>
    </div>
{% endblock %}

{% block Dist2 %}
    <div class="pagedisc">
        <i>{{ 'AccountName' | trans ({}, "accounts") }} :</i><span>{{ retailerAccount.accName }}</span><br>
        <i>{{ 'Balance' | trans ({}, "accounts") }} :</i><span>{{ retailerAccount.accBalance }} {{ retailerAccount.accCurrency }}</span><br>
    </div>
{% endblock %}

{% set hornav = '40px' %}
{% block Tabs %}

    <li {% if tab == '1' %}class="active"{% endif %} >
        <a href="{{ path('Retailer_Transaction',{'id':retailerAccount.id}) }}"  >
            <input type="submit" value="{{ 'Transaction' | trans ({}, "transaction") }}" >
        </a>
    </li>
    <li {% if tab == '2' %}class="active"{% endif %}  >
        <a href="{{ path('dist_RetailerItem',{'id':retailerAccount.id}) }}"  >
            <input type="submit" value="{{ 'Items' | trans ({}, "item") }}" >
        </a>
    </li>


    <li {% if tab == '3' %}class="active"{% endif %} >
        <a href="{{ path('DistRetailerUser',{'id':retailerAccount.id}) }}"  >
            <input type="submit" value="{{ 'Users' | trans ({}, "user") }}" >
        </a>
    </li>

    <li {% if tab == '4' %}class="active"{% endif %} >
        <a href="{{ path('DistRetailerSetting',{'id':retailerAccount.id}) }}"  >
            <input type="submit" value="{{ 'Setting' | trans ({}, "common") }}" >
        </a>
    </li>

<li {% if tab == '5' %}class="active"{% endif %} >
    <a>
        <a href="{{ path('Retailer_details',{'id':retailerAccount.id}) }}"  >
            <input type="submit" value="{{ 'Details' | trans ({}, "common") }}" >
        </a>
    </a>
</li>
{% endblock Tabs %}


{% block Body %}
    <div class="span">
        <div class="widget stacked">

            <div class="widget-content">


                <div class="tab-content">
                    <div class="tab-pane active" id="Info">
                        {% block Tab %}
                        {% endblock Tab %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock Body %}